/* pages/merchant/pet/manage/manage-simple.wxss */

/* 容器样式 */
.container {
  padding: env(safe-area-inset-top) 30rpx 30rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  min-height: 100vh;
  font-size: 28rpx;
  color: #333;
}

/* 标准操作栏 */
.standard-action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.back-btn {
  background-color: transparent;
  color: #333;
  font-size: 28rpx;
  border: none;
  padding: 10rpx 20rpx;
  margin: 0;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  flex: 1;
  margin: 0 20rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  background-color: #fff;
  padding: 15rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.search-input {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
}

.add-btn {
  background-color: #1aad19;
  color: #fff;
  padding: 15rpx 30rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.3);
  transition: all 0.3s ease;
  height: 80rpx;
  line-height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-btn:active {
  background-color: #179715;
  transform: scale(0.95);
}

/* 筛选器样式 */
.filter-bar {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
  padding: 15rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow-x: auto;
  flex-wrap: wrap;
}

.filter-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.filter-label {
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
}

.filter-options {
  display: flex;
  gap: 10rpx;
}

.filter-option {
  font-size: 24rpx;
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
  color: #666;
  white-space: nowrap;
}

.filter-option.active {
  background-color: #1aad19;
  color: #fff;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  color: #999;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.empty-btn {
  background-color: #1aad19;
  color: #fff;
  padding: 15rpx 30rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.3);
  transition: all 0.3s ease;
}

/* 宠物列表 */
.pet-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 宠物项 */
.pet-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

/* 宠物基本信息 */
.pet-info {
  display: flex;
  gap: 25rpx;
  margin-bottom: 25rpx;
  border-bottom: 2rpx solid #f0f0f0;
  padding-bottom: 25rpx;
}

.pet-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
  object-fit: cover;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.pet-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.pet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.pet-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.pet-status {
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.pet-status.published {
  background-color: #eaffea;
  color: #1aad19;
}

.pet-status.unpublished {
  background-color: #fff2f0;
  color: #ff3b30;
}

.pet-status.has-order {
  background-color: #fff3cd;
  color: #e6a23c;
}

/* 状态容器 */
.status-container {
  display: flex;
  gap: 10rpx;
  align-items: center;
}

.pet-meta {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.pet-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff3b30;
}

/* 操作区域 */
.pet-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 操作按钮组 */
.action-buttons {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  border: none;
  transition: all 0.3s ease;
  min-width: 120rpx;
  text-align: center;
  height: 60rpx;
  line-height: 36rpx;
}

.edit-btn {
  background-color: #fff;
  border: 2rpx solid #ff9500;
  color: #ff9500;
}

.view-btn {
  background-color: #fff;
  border: 2rpx solid #007aff;
  color: #007aff;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .container {
    padding: env(safe-area-inset-top) 20rpx 20rpx;
  }
  
  .standard-action-bar {
    margin-bottom: 20rpx;
  }
  
  .page-title {
    font-size: 32rpx;
  }
  
  .search-bar {
    margin-bottom: 20rpx;
    flex-direction: column;
    padding: 15rpx;
    gap: 15rpx;
  }
  
  .search-input {
    margin-right: 0;
    width: 100%;
  }
  
  .add-btn {
    width: 100%;
  }
}
