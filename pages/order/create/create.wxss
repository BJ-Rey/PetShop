/* pages/order/create/create.wxss */
.container {
  padding-bottom: 120rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.card {
  background: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

/* 地址部分 */
.address-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 100rpx;
}

.address-info {
  flex: 1;
}

.contact-info {
  margin-bottom: 10rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.phone {
  margin-left: 20rpx;
  color: #666;
  font-weight: normal;
}

.address-detail {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
}

.add-address {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333;
}

.icon {
  font-size: 40rpx;
  margin-right: 10rpx;
  color: #1aad19;
}

.arrow {
  color: #999;
  font-size: 30rpx;
  margin-left: 20rpx;
}

/* 商品列表 */
.goods-item {
  display: flex;
  margin-bottom: 30rpx;
}

.goods-item:last-child {
  margin-bottom: 0;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background: #f0f0f0;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.goods-meta {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.goods-price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  font-size: 32rpx;
  color: #e64340;
  font-weight: bold;
}

.quantity {
  font-size: 26rpx;
  color: #999;
}

/* 费用明细 */
.cost-item {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.cost-item:last-child {
  margin-bottom: 0;
}

.cost-item.total {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
  margin-top: 20rpx;
  font-weight: bold;
}

.total-price {
  color: #e64340;
  font-size: 32rpx;
}

/* 底部栏 */
.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 100;
  padding-bottom: env(safe-area-inset-bottom);
}

.total-info {
  flex: 1;
  font-size: 30rpx;
}

.pay-btn {
  background: #1aad19;
  color: #fff;
  font-size: 30rpx;
  padding: 0 60rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  margin: 0;
}
