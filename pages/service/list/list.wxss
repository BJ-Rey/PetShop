/* pages/service/list/list.wxss */
.container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 搜索框样式 */
.search-box {
  background: #fff;
  border-radius: 40rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
}

.search-box:focus-within {
  box-shadow: 0 4rpx 16rpx rgba(26, 173, 25, 0.15);
}

.search-box input {
  width: 100%;
  height: 80rpx;
  border: none;
  background: transparent;
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #333;
}

.search-box input::placeholder {
  color: #999;
  font-size: 30rpx;
}

/* 搜索按钮样式 */
.search-btn {
  background: #1aad19;
  color: #fff;
  border: none;
  border-radius: 30rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 15rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(26, 173, 25, 0.3);
}

.search-btn:active {
  background: #179316;
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(26, 173, 25, 0.5);
}

.search-btn:focus {
  outline: none;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .search-btn {
    font-size: 26rpx;
    padding: 0 25rpx;
    height: 55rpx;
    line-height: 55rpx;
  }
}

/* 垂直筛选布局 */
.filter-container {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 10rpx 0;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.filter-row {
  padding: 15rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  align-items: center;
}

.filter-row:last-child {
  border-bottom: none;
}

.filter-scroll {
  display: flex;
  white-space: nowrap;
  width: 100%;
  overflow-x: auto;
}

.view-mode-group {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.filter-item {
  display: inline-block;
  padding: 10rpx 30rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 30rpx;
  font-size: 26rpx;
  margin-right: 20rpx;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.filter-item.active {
  background: #eaffea;
  color: #1aad19;
  font-weight: 500;
}

/* 热门服务样式 */
.hot-services {
  margin-bottom: 20rpx;
  background: #fff;
  padding: 25rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title {
  font-size: 38rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  align-items: center;
  letter-spacing: 1rpx;
}

.section-title::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 38rpx;
  background: #1aad19;
  border-radius: 4rpx;
  margin-right: 15rpx;
}

.hot-services-scroll {
  display: flex;
  overflow-x: auto;
  padding: 10rpx 0;
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE/Edge */
}

.hot-services-scroll::-webkit-scrollbar {
  display: none; /* Chrome/Safari */
}

.hot-service-item {
  width: 200rpx;
  margin-right: 20rpx;
  background: #fafafa;
  border-radius: 16rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  text-align: center;
  flex-shrink: 0;
  transition: all 0.3s ease;
  cursor: pointer;
}

.hot-service-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.service-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 15rpx;
  object-fit: cover;
  transition: transform 0.3s ease;
  border: 3rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.hot-service-item:active .service-image {
  transform: scale(1.1);
}

.service-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}

.service-price {
  font-size: 32rpx;
  color: #e64340;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.service-price::before {
  content: '¥';
  font-size: 24rpx;
  margin-right: 4rpx;
}

/* 服务列表样式 */
.service-list {
  background: #fff;
  border-radius: 16rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.sort-options {
  display: flex;
  align-items: center;
}

.sort-picker {
  background: #f5f5f5;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.sort-picker:active {
  background: #e8e8e8;
  transform: scale(0.95);
}

.picker-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

/* 网格视图样式 */
.grid-view {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 25rpx;
}

.service-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
}

.service-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.service-card-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.service-card:active .service-card-image {
  transform: scale(1.05);
}

.service-card-info {
  padding: 20rpx;
}

.service-card-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.service-card-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
}

.service-card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.service-card-price {
  font-size: 32rpx;
  color: #e64340;
  font-weight: bold;
  display: flex;
  align-items: center;
}

.service-card-price::before {
  content: '¥';
  font-size: 24rpx;
  margin-right: 4rpx;
}

.service-card-duration {
  font-size: 24rpx;
  color: #999;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 列表视图样式 */
.list-view {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.service-list-item {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
  align-items: center;
}

.service-list-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.list-item-image {
  width: 150rpx;
  height: 150rpx;
  object-fit: cover;
  border-radius: 12rpx;
  margin: 20rpx;
  transition: transform 0.3s ease;
  border: 3rpx solid #f0f0f0;
}

.service-list-item:active .list-item-image {
  transform: scale(1.1);
}

.list-item-info {
  flex: 1;
  padding: 20rpx 0 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.list-item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-item-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.list-item-meta {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.list-item-price {
  font-size: 32rpx;
  color: #e64340;
  font-weight: bold;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
}

.list-item-price::before {
  content: '¥';
  font-size: 24rpx;
  margin-right: 4rpx;
}

.list-item-duration {
  font-size: 24rpx;
  color: #999;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-right: 30rpx;
}

.list-item-merchant {
  font-size: 24rpx;
  color: #1aad19;
  background: #eaffea;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.list-item-btn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  background: #1aad19;
  color: #fff;
  border: none;
  border-radius: 30rpx;
  margin: 20rpx;
  padding: 0;
  transition: all 0.3s ease;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(26, 173, 25, 0.3);
}

.list-item-btn:active {
  background: #179715;
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.4);
}

/* 空状态样式 */
.empty {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 32rpx;
}

/* 响应式设计 */
/* 小屏设备 */
@media (max-width: 375px) {
  .grid-view {
    grid-template-columns: 1fr;
  }
  
  .service-card-image {
    height: 250rpx;
  }
  
  .list-item-image {
    width: 120rpx;
    height: 120rpx;
  }
  
  .list-item-btn {
    width: 100rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 24rpx;
  }
  
  .hot-service-item {
    width: 160rpx;
  }
}

/* 大屏设备 */
@media (min-width: 750px) {
  .grid-view {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .service-card-image {
    height: 220rpx;
  }
}

/* 超大屏设备 */
@media (min-width: 1024px) {
  .grid-view {
    grid-template-columns: repeat(4, 1fr);
  }
  
  .service-card-image {
    height: 250rpx;
  }
}