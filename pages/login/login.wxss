/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-top: env(safe-area-inset-top);
}

.login-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.login-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
  text-align: center;
}

.login-form {
  width: 100%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.phone-input-wrapper {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.form-input {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  background-color: #fafafa;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #07c160;
  background-color: #fff;
}

.send-code-btn {
  height: 80rpx;
  min-width: 180rpx;
  font-size: 28rpx;
  color: #999;
  background-color: #f5f5f5;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
}

.send-code-btn.active {
  color: #07c160;
  background-color: #f0f9f4;
  border-color: #07c160;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  background-color: #07c160;
  border-radius: 10rpx;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.login-btn::after {
  border: none;
}

.login-btn:disabled {
  background-color: #c8e6c9;
  color: #fff;
}

.login-note {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  line-height: 1.5;
  margin-top: 30rpx;
}

.agreement-checkbox {
  display: flex;
  align-items: center;
  justify-content: center;
}

.agreement-checkbox checkbox {
  transform: scale(0.7);
  margin-right: 5rpx;
}

.agreement-link {
  color: #07c160;
  display: inline;
}

/* 协议弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.agreement-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  z-index: 1001;
  display: flex;
  flex-direction: column;
  max-height: 80vh;
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 0 10rpx;
}

.modal-content {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto;
  min-height: 300rpx;
}

.agreement-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-wrap;
}

.modal-footer {
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.confirm-btn {
  background: #07c160;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  width: 100%;
}
