/* pages/merchant/pet/edit/edit.wxss */

/* 全局样式重置 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 0;
  box-sizing: border-box;
}

/* 头部操作栏 */
.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 92rpx;
  padding: 0 24rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  position: sticky;
  top: 0;
  z-index: 100;
  box-sizing: border-box;
}

.back-btn {
  font-size: 36rpx;
  color: #303133;
  cursor: pointer;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #303133;
}

.save-btn {
  font-size: 32rpx;
  color: #1989fa;
  cursor: pointer;
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  transition: background-color 0.3s;
}

.save-btn:active {
  background-color: #ecf5ff;
}

/* 表单区域 */
.form-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 24rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #ebeef5;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

/* 标签样式 */
.label {
  font-size: 28rpx;
  color: #606266;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.label.required::after {
  content: " *";
  color: #f56c6c;
}

/* 输入框样式 */
input, textarea {
  width: 100%;
  padding: 16rpx 20rpx;
  border: 1rpx solid #dcdfe6;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #303133;
  box-sizing: border-box;
  outline: none;
  transition: border-color 0.3s;
  background-color: #fff;
}

input:focus, textarea:focus {
  border-color: #1989fa;
}

input::placeholder, textarea::placeholder {
  color: #c0c4cc;
}

/* 多行输入框 */
textarea {
  min-height: 160rpx;
  resize: vertical;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  line-height: 1.5;
}

/* 字符计数 */
.char-count {
  font-size: 24rpx;
  color: #909399;
  text-align: right;
  margin-top: 8rpx;
}

/* 单选按钮组 */
.radio-group {
  display: flex;
  gap: 48rpx;
  margin-top: 8rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  color: #303133;
  cursor: pointer;
}

.radio-item radio {
  transform: scale(1.2);
  margin-right: 8rpx;
}

/* 状态开关 */
.status-switch {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 8rpx;
}

.status-switch switch {
  transform: scale(1.2);
}

.switch-text {
  font-size: 28rpx;
  color: #303133;
}

/* 图片上传器 */
.image-uploader {
  margin-top: 16rpx;
}

.uploaded-images {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f0f0f0;
  border: 1rpx dashed #dcdfe6;
  box-sizing: border-box;
}

.image-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-image {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 36rpx;
  height: 36rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 28rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s;
}

.delete-image:hover {
  background-color: rgba(0, 0, 0, 0.8);
  transform: scale(1.1);
}

/* 添加图片按钮 */
.add-image-btn {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx dashed #dcdfe6;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fafafa;
  cursor: pointer;
  transition: all 0.3s;
  box-sizing: border-box;
}

.add-image-btn:hover {
  background-color: #ecf5ff;
  border-color: #1989fa;
}

.add-icon {
  font-size: 48rpx;
  color: #c0c4cc;
  margin-bottom: 12rpx;
  transition: color 0.3s;
}

.add-image-btn:hover .add-icon {
  color: #1989fa;
}

.add-text {
  font-size: 24rpx;
  color: #909399;
  transition: color 0.3s;
}

.add-image-btn:hover .add-text {
  color: #1989fa;
}

/* 上传提示 */
.upload-tip {
  font-size: 20rpx;
  color: #909399;
  margin-top: 16rpx;
  display: block;
}

/* 底部保存按钮 */
.bottom-btn {
  padding: 32rpx 24rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
  position: sticky;
  bottom: 0;
  z-index: 99;
}

/* 按钮基础样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 40rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  border: none;
  outline: none;
  box-sizing: border-box;
  width: 100%;
}

/* 按钮颜色 */
.btn-primary {
  background-color: #1989fa;
  color: #fff;
}

.btn-primary:hover {
  background-color: #0c7ce4;
}

.btn-success {
  background-color: #07c160;
  color: #fff;
}

.btn-success:hover {
  background-color: #06ad56;
}

.btn-warning {
  background-color: #ff976a;
  color: #fff;
}

.btn-warning:hover {
  background-color: #ff7d43;
}

.btn-danger {
  background-color: #ee0a24;
  color: #fff;
}

.btn-danger:hover {
  background-color: #d90a1c;
}

.btn-default {
  background-color: #fff;
  color: #666;
  border: 1rpx solid #e4e7ed;
}

.btn-default:hover {
  background-color: #f5f7fa;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .header-bar {
    padding: 0 20rpx;
  }
  
  .form-section {
    padding: 20rpx;
  }
  
  .image-item,
  .add-image-btn {
    width: 160rpx;
    height: 160rpx;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.form-section {
  animation: fadeIn 0.3s ease-out;
}

/* 加载状态 */
.loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading-text {
  font-size: 32rpx;
  color: #606266;
  background-color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 6rpx;
  height: 6rpx;
}

::-webkit-scrollbar-track {
  background-color: #f5f5f5;
  border-radius: 3rpx;
}

::-webkit-scrollbar-thumb {
  background-color: #c0c4cc;
  border-radius: 3rpx;
}

::-webkit-scrollbar-thumb:hover {
  background-color: #909399;
}