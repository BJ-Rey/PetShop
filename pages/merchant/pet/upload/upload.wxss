/* pages/merchant/pet/upload/upload.wxss */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部操作栏 */
.standard-action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.standard-back-btn {
  font-size: 36rpx;
  color: #333;
  cursor: pointer;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 表单样式 */
.pet-form {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 1px solid #f0f0f0;
}

.form-item {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
}

.form-label.required::after {
  content: '*';
  color: #ff3b30;
  margin-left: 5rpx;
}

input, textarea, .picker {
  padding: 20rpx;
  border: 1px solid #e8e8e8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fafafa;
}

input:focus, textarea:focus {
  border-color: #07c160;
  background-color: #fff;
  outline: none;
}

textarea {
  min-height: 120rpx;
  resize: none;
  line-height: 1.5;
}

/* 年龄输入样式 */
.age-inputs {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.age-inputs input {
  flex: 0 0 200rpx;
}

.age-separator {
  font-size: 28rpx;
  color: #666;
}

/* 单选框和复选框样式 */
.radio-group, .checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 25rpx;
}

.radio-item, .checkbox-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 28rpx;
  color: #666;
  cursor: pointer;
}

/* 图片上传样式 */
.upload-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.upload-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 32rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  cursor: pointer;
}

.upload-btn {
  width: 180rpx;
  height: 180rpx;
  border: 2rpx dashed #e8e8e8;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  background-color: #fafafa;
  cursor: pointer;
  transition: all 0.3s ease;
}

.upload-btn:hover {
  border-color: #07c160;
  background-color: #f0f9f4;
}

.upload-icon {
  font-size: 48rpx;
  color: #999;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.upload-tip {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 开关样式 */
.form-item .switch {
  transform: scale(1.2);
}

.switch-text {
  font-size: 28rpx;
  color: #666;
  margin-left: 20rpx;
}

/* 表单操作按钮 */
.form-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 50rpx;
}

.btn {
  flex: 1;
  padding: 20rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.btn-primary {
  color: #fff;
  background-color: #07c160;
  border: none;
}

.btn-primary:hover {
  background-color: #06ad56;
}

.btn-default {
  color: #666;
  background-color: #f5f5f5;
  border: 1px solid #e8e8e8;
}

.btn-default:hover {
  background-color: #e8e8e8;
}

/* 批量上传按钮 */
.batch-upload-btn {
  margin-top: 30rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #07c160;
  background-color: transparent;
  border: 1px solid #07c160;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.batch-upload-btn:hover {
  background-color: #f0f9f4;
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .container {
    padding: 10rpx;
  }
  
  .pet-form {
    padding: 20rpx;
  }
  
  .image-item, .upload-btn {
    width: 150rpx;
    height: 150rpx;
  }
  
  .form-actions {
    flex-direction: column;
  }
}