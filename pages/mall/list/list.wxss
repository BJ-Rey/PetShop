.container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* ÊêúÁ¥¢ÂíåËßÜÂõæÂàáÊç¢ÂÆπÂô® */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  gap: 20rpx;
}

/* ÊêúÁ¥¢Ê°ÜÊ†∑Âºè */
.search-box {
  flex: 1;
  background: #fff;
  border-radius: 40rpx;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
}

/* ËßÜÂõæÊ®°ÂºèÂàáÊç¢ */
.view-mode-toggle {
  display: flex;
  gap: 15rpx;
  align-items: center;
}

.mode-btn {
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 30rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.mode-btn.active {
  background: #1aad19;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.3);
}

.mode-btn:active {
  transform: scale(0.95);
}

.search-box:focus-within {
  box-shadow: 0 4rpx 16rpx rgba(26, 173, 25, 0.15);
}

.search-box input {
  width: 100%;
  height: 80rpx;
  border: none;
  background: transparent;
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #333;
}

.search-box input::placeholder {
  color: #999;
  font-size: 30rpx;
}

/* ÊêúÁ¥¢ÊåâÈíÆÊ†∑Âºè */
.search-btn {
  background: #1aad19;
  color: #fff;
  border: none;
  border-radius: 30rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 15rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(26, 173, 25, 0.3);
}

.search-btn:active {
  background: #179316;
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(26, 173, 25, 0.5);
}

.search-btn:focus {
  outline: none;
}

/* ÂìçÂ∫îÂºèË∞ÉÊï¥ */
@media (max-width: 375px) {
  .search-btn {
    font-size: 26rpx;
    padding: 0 25rpx;
    height: 55rpx;
    line-height: 55rpx;
  }
}

/* Á≠õÈÄâÊåâÈíÆÊ†∑Âºè */
.filter-buttons {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}

.filter-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  background: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  color: #666;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
  font-weight: bold;
}

.filter-btn.active {
  background: #1aad19;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.3);
}

.filter-btn:active {
  transform: scale(0.98);
}

/* Áå´Âí™Âç°ÁâáÁâπÊúâÊ†∑Âºè */
.pet-status {
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  color: #fff;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  font-weight: bold;
  z-index: 10;
}

.pet-status.available {
  background-color: rgba(7, 193, 96, 0.9);
}

.pet-status.booked {
  background-color: rgba(255, 102, 0, 0.9);
}

.pet-status.sold {
  background-color: rgba(153, 153, 153, 0.9);
}

.pet-gender {
    background: #f0f9eb;
    color: #67c23a;
    padding: 2rpx 10rpx;
    border-radius: 8rpx;
    font-size: 20rpx;
    margin-right: 10rpx;
}

.pet-age {
    background: #ecf5ff;
    color: #409eff;
    padding: 2rpx 10rpx;
    border-radius: 8rpx;
    font-size: 20rpx;
}

.deposit-info {
  font-size: 22rpx;
  color: #999;
}

/* Modal Styles */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
}

.contact-modal {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
  padding: 30rpx;
  z-index: 1001;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
}

.contact-method {
  margin-bottom: 30rpx;
}

.method-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.qrcode-container {
  text-align: center;
}

.qrcode-container image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 10rpx;
}

.qrcode-tip {
  font-size: 24rpx;
  color: #999;
}

.phone-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 10rpx;
}

.phone-number {
  font-size: 32rpx;
  font-weight: bold;
}

.call-btn {
  background: #1aad19;
  color: #fff;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  gap: 5rpx;
}

/* ËΩÆÊí≠ÂõæÊ†∑Âºè */
.banner-section {
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.banner-image {
  width: 100%;
  height: 250rpx;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.banner-section:hover .banner-image {
  transform: scale(1.05);
}

/* ÁÉ≠Èó®ÂïÜÂìÅÊ†∑Âºè */
.hot-products {
  margin-bottom: 20rpx;
  background: #fff;
  padding: 25rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title {
  font-size: 38rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  align-items: center;
  letter-spacing: 1rpx;
}

.section-title::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 38rpx;
  background: #1aad19;
  border-radius: 4rpx;
  margin-right: 15rpx;
}

.more {
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.more:active {
  background: #e8e8e8;
  color: #1aad19;
  transform: scale(0.95);
}

.hot-products-scroll {
  display: flex;
  overflow-x: auto;
  padding: 10rpx 0;
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE/Edge */
}

.hot-products-scroll::-webkit-scrollbar {
  display: none; /* Chrome/Safari */
}

.hot-product-item {
  width: 220rpx;
  margin-right: 20rpx;
  background: #fafafa;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  text-align: center;
  flex-shrink: 0;
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.hot-product-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.product-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.hot-product-item:active .product-image {
  transform: scale(1.1);
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}

.product-price {
  font-size: 32rpx;
  color: #e64340;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-price::before {
  content: '¬•';
  font-size: 24rpx;
  margin-right: 4rpx;
}

.product-sales {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  width: fit-content;
  margin: 0 auto;
}

.product-sales::before {
  content: 'üî•';
  margin-right: 6rpx;
}

/* ÂïÜÂìÅÂàóË°®Ê†∑Âºè */
.product-list {
  background: #fff;
  border-radius: 16rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 25rpx;
}

.product-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
}

.product-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.product-card-image {
  width: 100%;
  height: 250rpx;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.product-card:active .product-card-image {
  transform: scale(1.05);
}

.product-card-info {
  padding: 20rpx;
}

.product-card-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
}

.product-card-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
  font-size: 24rpx;
  color: #666;
}

.product-card-rating {
  color: #ff9800;
  font-weight: bold;
  display: flex;
  align-items: center;
}

.product-card-sales {
  color: #999;
}

.product-card-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 15rpx;
  flex-wrap: wrap;
}

.current-price {
  font-size: 36rpx;
  color: #e64340;
  font-weight: bold;
  margin-right: 15rpx;
  display: flex;
  align-items: center;
}

.current-price::before {
  content: '¬•';
  font-size: 28rpx;
  margin-right: 4rpx;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
  display: flex;
  align-items: center;
}

.original-price::before {
  content: '¬•';
  margin-right: 4rpx;
}

.buy-btn {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  background: #1aad19;
  color: #fff;
  border: none;
  border-radius: 30rpx;
  padding: 0;
  transition: all 0.3s ease;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(26, 173, 25, 0.3);
}

.buy-btn:active {
  background: #179715;
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.4);
}

/* Á©∫Áä∂ÊÄÅÊ†∑Âºè */
.empty {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 32rpx;
}

/* ÂìçÂ∫îÂºèËÆæËÆ° */
/* Â∞èÂ±èËÆæÂ§á */
@media (max-width: 375px) {
  .product-grid {
    grid-template-columns: 1fr;
  }
  
  .product-card-image {
    height: 300rpx;
  }
  
  .banner-image {
    height: 200rpx;
  }
  
  .hot-product-item {
    width: 180rpx;
  }
  
  .product-image {
    width: 140rpx;
    height: 140rpx;
  }
}

/* Â§ßÂ±èËÆæÂ§á */
@media (min-width: 750px) {
  .product-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .product-card-image {
    height: 280rpx;
  }
  
  .banner-image {
    height: 300rpx;
  }
}

/* Ë∂ÖÂ§ßÂ±èËÆæÂ§á */
@media (min-width: 1024px) {
  .product-grid {
    grid-template-columns: repeat(4, 1fr);
  }
  
  .product-card-image {
    height: 320rpx;
  }
  
  .banner-image {
    height: 350rpx;
  }
}