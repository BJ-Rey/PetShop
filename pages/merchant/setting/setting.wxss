/* pages/merchant/setting/setting.wxss */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部操作栏 */
.standard-action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.logout-btn {
  font-size: 28rpx;
  color: #666;
  background-color: transparent;
  padding: 0;
  margin: 0;
  min-width: auto;
  height: auto;
  line-height: normal;
}

.logout-btn:hover {
  color: #ff3b30;
}

/* 设置区域 */
.setting-section {
  margin-bottom: 20rpx;
  padding: 25rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
}

/* 设置项 */
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  cursor: pointer;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:hover {
  background-color: #fafafa;
}

.setting-label {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.setting-icon {
  font-size: 32rpx;
}

.setting-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.setting-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.setting-desc {
  font-size: 26rpx;
  color: #666;
  text-align: right;
  flex: 1;
}

.setting-arrow {
  font-size: 32rpx;
  color: #999;
}

/* 商家LOGO */
.merchant-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  object-fit: cover;
  border: 2rpx solid #f0f0f0;
}

/* 切换项 */
.toggle-item .setting-content {
  gap: 40rpx;
}

/* 退出登录区域 */
.logout-section {
  padding: 40rpx 20rpx;
}

.logout-button {
  width: 100%;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  background-color: #ff3b30;
  color: #fff;
  border: none;
  line-height: 90rpx;
}

.logout-button:hover {
  background-color: #ff453a;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(255, 59, 48, 0.3);
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .container {
    padding: 10rpx;
  }
  
  .setting-section {
    padding: 20rpx;
  }
  
  .setting-item {
    padding: 20rpx 0;
  }
  
  .setting-icon {
    font-size: 28rpx;
  }
  
  .setting-name {
    font-size: 26rpx;
  }
  
  .setting-desc {
    font-size: 24rpx;
  }
  
  .logout-section {
    padding: 30rpx 10rpx;
  }
}
