/* pages/merchant/product/add/add.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部操作栏 */
.standard-action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.save-btn {
  font-size: 28rpx;
  background-color: #07c160;
  color: #fff;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  border: none;
}

.save-btn:hover {
  background-color: #06b254;
}

/* 表单区域 */
.form-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.sku-tip {
  font-size: 24rpx;
  font-weight: normal;
  color: #999;
  margin-left: 10rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 25rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  min-height: 150rpx;
}

.form-picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.picker-text {
  flex: 1;
}

/* 图片上传 */
.image-upload {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.product-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
  object-fit: cover;
  border: 1rpx solid #e8e8e8;
}

.upload-btn {
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  background-color: #f5f5f5;
  color: #333;
  border: 1rpx solid #e8e8e8;
  border-radius: 30rpx;
}

.upload-btn:hover {
  background-color: #e8e8e8;
}

/* 状态切换 */
.status-toggle {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.form-switch {
  transform: scale(1.2);
}

.status-text {
  font-size: 28rpx;
  color: #666;
}

/* SKU管理样式 */
.spec-name-inputs {
  display: flex;
  gap: 20rpx;
}

.spec-name-input {
  flex: 1;
}

.spec-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.spec-option-group {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.spec-option-title {
  font-size: 26rpx;
  color: #666;
}

.spec-option-inputs {
  display: flex;
  gap: 10rpx;
}

.spec-option-input {
  flex: 1;
}

/* SKU表格 */
.sku-table-container {
  margin: 20rpx 0;
  overflow-x: auto;
}

.sku-table {
  width: 100%;
  border-collapse: collapse;
  background-color: #fff;
}

.sku-table th, .sku-table td {
  padding: 15rpx;
  border: 1rpx solid #e8e8e8;
  text-align: center;
  font-size: 26rpx;
}

.sku-table th {
  background-color: #f5f5f5;
  font-weight: bold;
  color: #333;
}

.sku-input {
  width: 100rpx;
  height: 50rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 0 10rpx;
  font-size: 24rpx;
  text-align: center;
}

.delete-sku-btn {
  color: #ff3b30;
  font-size: 24rpx;
  cursor: pointer;
}

.delete-sku-btn:hover {
  text-decoration: underline;
}

.generate-sku-btn {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  background-color: #f5f5f5;
  color: #333;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.generate-sku-btn:hover {
  background-color: #e8e8e8;
}

/* 响应式设计 */
@media screen and (min-width: 768px) {
  .container {
    max-width: 1200rpx;
    margin: 0 auto;
  }
}
