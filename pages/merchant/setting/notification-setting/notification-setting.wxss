/* pages/merchant/setting/notification-setting/notification-setting.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 鏍囧噯鎿嶄綔鏍忔牱寮?*/
.standard-action-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.back-btn {
  background-color: transparent;
  border: none;
  color: #333;
  font-size: 32rpx;
  padding: 20rpx;
  margin: 0;
  line-height: 1;
  display: flex;
  align-items: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
}

.save-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  padding: 16rpx 32rpx;
  margin: 0 20rpx;
  border-radius: 24rpx;
  border: none;
  line-height: 1;
}

/* 娴姩淇濆瓨鎸夐挳鏍峰紡 */
.floating-save-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 36rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border: none;
  border-radius: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
  z-index: 1000;
  transition: all 0.3s ease;
}

.floating-save-btn:hover {
  background-color: #05b056;
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.25);
}

.floating-save-btn:active {
  transform: translateY(0);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.2);
}

.save-icon {
  font-size: 36rpx;
}

/* 璁剧疆鍖哄潡鏍峰紡 */
.setting-section {
  margin-bottom: 24rpx;
}

.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 琛ㄥ崟鏍峰紡 */
.form-item {
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.form-item.toggle-item {
  align-items: center;
  gap: 20rpx;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  flex: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.form-icon {
  font-size: 36rpx;
}

/* 閫氱煡璇︾粏璁剧疆鏍峰紡 */
.notification-detail {
  margin-top: 16rpx;
  padding: 24rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

/* 澶嶉€夋缁勬牱寮?*/
.checkbox-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  flex: 1;
}

.checkbox-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  color: #333;
}

/* 鎺ユ敹浜哄垪琛ㄦ牱寮?*/
.recipient-list {
  margin-bottom: 24rpx;
}

.recipient-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.recipient-item:last-child {
  margin-bottom: 0;
}

.recipient-info {
  flex: 1;
}

.recipient-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.recipient-phone {
  font-size: 26rpx;
  color: #666;
}

.recipient-actions {
  display: flex;
  gap: 12rpx;
}

.edit-btn {
  background-color: #1989fa;
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border: none;
  border-radius: 6rpx;
}

.delete-btn {
  background-color: #ff4d4f;
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border: none;
  border-radius: 6rpx;
}

/* 娣诲姞鎺ユ敹浜烘寜閽?*/
.add-recipient-btn {
  width: 100%;
  padding: 20rpx;
  font-size: 28rpx;
  color: #07c160;
  background-color: transparent;
  border: 2rpx dashed #07c160;
  border-radius: 8rpx;
}

/* 鍝嶅簲寮忔牱寮?*/
@media (max-width: 375rpx) {
  .form-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 12rpx;
  }
  
  .form-label {
    margin-bottom: 12rpx;
  }
  
  .checkbox-group {
    width: 100%;
  }
  
  .recipient-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 12rpx;
  }
  
  .recipient-actions {
    width: 100%;
    justify-content: flex-end;
  }
}
