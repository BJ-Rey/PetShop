  display: flex;
  align-items: center; /* 垂直居中 */
  padding-left: 10px;
}

.custom-nav-placeholder {
  width: 100%;
}

.nav-left {
  width: 40px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.page-title {
  flex: 1;
  text-align: left;
  padding-left: 10rpx;
  font-size: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 20px; /* 标题栏位置调整：下移20px */
}

.action-buttons {
  display: flex;
  align-items: center;
  gap: 10px; /* 间距调整为10px */
  margin-right: 10rpx;
}

.action-item {
  width: 48px; /* 按钮尺寸调整为48x48px */
  height: 48px;
  min-width: 48px;
  min-height: 48px;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 0;
}

.floating-cart-btn {
  position: fixed;
  bottom: 180rpx; /* 与加入购物车按钮保持15px垂直间距 (假设底部栏约100-120rpx, 15px~30rpx) */
  left: 30rpx; /* 重新定位至页面左下角 */
  right: auto;
  background-color: #fff;
  color: #333;
  width: 48px; /* 按钮尺寸调整为48x48px */
  height: 48px;
  border-radius: 50%; /* 圆形按钮 */
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 998;
  font-size: 28rpx;
  font-weight: bold;
  padding: 0;
}

.floating-cart-btn .cart-icon {
  font-size: 36rpx;
  margin: 0;
}

/* 隐藏原有文字，只显示图标，因为变成了圆形按钮 */
.floating-cart-btn text:nth-child(2) {
    display: none;
}

/* 状态标签样式优化 */
.pet-status {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  z-index: 10;
}

.pet-status.available {
  background-color: rgba(7, 193, 96, 0.9); /* 可预定 */
}

.pet-status.booked {
  background-color: rgba(255, 102, 0, 0.9); /* 已预定/已定 */
}

.pet-status.sold {
  background-color: rgba(153, 153, 153, 0.9); /* 已售出 */
}
