.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 20rpx;
  margin: 20rpx 0;
}

.search-box input {
  flex: 1;
  height: 80rpx;
  border: none;
  background: transparent;
  padding: 0 20rpx;
  font-size: 32rpx;
