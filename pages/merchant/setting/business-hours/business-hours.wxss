/* pages/merchant/setting/business-hours/business-hours.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 鏍囧噯鎿嶄綔鏍忔牱寮?*/
.standard-action-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.back-btn {
  background-color: transparent;
  border: none;
  color: #333;
  font-size: 32rpx;
  padding: 20rpx;
  margin: 0;
  line-height: 1;
  display: flex;
  align-items: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
}

.save-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  padding: 16rpx 32rpx;
  margin: 0 20rpx;
  border-radius: 24rpx;
  border: none;
  line-height: 1;
}

/* 娴姩淇濆瓨鎸夐挳鏍峰紡 */
.floating-save-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 36rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border: none;
  border-radius: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
  z-index: 1000;
  transition: all 0.3s ease;
}

.floating-save-btn:hover {
  background-color: #05b056;
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.25);
}

.floating-save-btn:active {
  transform: translateY(0);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.2);
}

.save-icon {
  font-size: 36rpx;
}

/* 璁剧疆鍖哄潡鏍峰紡 */
.setting-section {
  margin-bottom: 24rpx;
}

.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-subtitle {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  margin: 24rpx 0 16rpx;
}

/* 妯″紡閫夋嫨鍣ㄦ牱寮?*/
.mode-selector {
  display: flex;
  gap: 20rpx;
}

.mode-btn {
  flex: 1;
  padding: 20rpx;
  font-size: 30rpx;
  border: 2rpx solid #07c160;
  background-color: transparent;
  color: #07c160;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.mode-btn.active {
  background-color: #07c160;
  color: #fff;
}

/* 琛ㄥ崟鏍峰紡 */
.form-item {
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  flex: 0 0 180rpx;
}

.form-input, .form-textarea, .form-picker {
  flex: 1;
  padding: 20rpx;
  font-size: 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.form-textarea {
  min-height: 120rpx;
  resize: none;
}

/* 鐘舵€佸紑鍏虫牱寮?*/
.status-switch {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.status-text {
  font-size: 30rpx;
  color: #666;
}

/* 鏃堕棿閫夋嫨鍣ㄦ牱寮?*/
.time-picker-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-top: 16rpx;
}

.time-picker {
  flex: 1;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.time-separator {
  font-size: 32rpx;
  color: #666;
  font-weight: bold;
}

/* 鏃堕棿娈垫牱寮?*/
.time-slots {
  margin-top: 24rpx;
}

.time-slot {
  background-color: #f5f5f5;
  padding: 24rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.time-slot-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.slot-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.delete-slot-btn {
  background-color: #ff4d4f;
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 20rpx;
  border: none;
  border-radius: 6rpx;
}

.add-slot-btn {
  width: 100%;
  padding: 20rpx;
  font-size: 28rpx;
  color: #07c160;
  background-color: transparent;
  border: 2rpx dashed #07c160;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

/* 宸ヤ綔鏃ョ被鍨嬫爣绛炬牱寮?*/
.workday-tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  overflow-x: auto;
  padding-bottom: 16rpx;
}

.tab-btn {
  flex: 1;
  min-width: 160rpx;
  padding: 16rpx;
  font-size: 28rpx;
  border: 2rpx solid #07c160;
  background-color: transparent;
  color: #07c160;
  border-radius: 24rpx;
  white-space: nowrap;
}

.tab-btn.active {
  background-color: #07c160;
  color: #fff;
}

/* 鑺傚亣鏃ョ鐞嗘牱寮?*/
.holiday-management {
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

.manage-holiday-btn {
  width: 100%;
  padding: 20rpx;
  font-size: 28rpx;
  color: #07c160;
  background-color: transparent;
  border: 2rpx solid #07c160;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
}

.holiday-list {
  max-height: 240rpx;
  overflow-y: auto;
}

.holiday-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.holiday-date {
  color: #333;
  font-weight: bold;
}

.holiday-name {
  color: #666;
}

/* 棰勮鏍峰紡 */
.preview-container {
  background-color: #f5f5f5;
  padding: 24rpx;
  border-radius: 8rpx;
}

.preview-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.preview-item:last-child {
  border-bottom: none;
}

.preview-day {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  flex: 0 0 120rpx;
}

.preview-status {
  font-size: 28rpx;
  font-weight: bold;
  flex: 0 0 80rpx;
}

.preview-status:empty::after {
  content: '浼戞伅';
  color: #999;
}

.preview-status:not(:empty) {
  color: #07c160;
}

.preview-time {
  font-size: 28rpx;
  color: #666;
  text-align: right;
  flex: 1;
}

/* 閿欒淇℃伅鏍峰紡 */
.error-text {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 8rpx;
  width: 100%;
  text-align: left;
}

/* 鍝嶅簲寮忔牱寮?*/
@media (max-width: 375rpx) {
  .form-item {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .form-label {
    margin-bottom: 12rpx;
  }
  
  .status-switch {
    width: 100%;
    justify-content: flex-end;
  }
}