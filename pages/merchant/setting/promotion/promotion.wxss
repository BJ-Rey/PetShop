/* pages/merchant/setting/promotion/promotion.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.standard-action-bar {
  display: flex;
  align-items: center;
  height: 88rpx;
  background-color: #fff;
  padding: 0 30rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin: -20rpx -20rpx 20rpx -20rpx;
}

.standard-back-btn {
  font-size: 36rpx;
  color: #333;
  padding: 10rpx 20rpx 10rpx 0;
}

.page-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
  margin-right: 40rpx;
}

/* Tabs */
.tabs {
  display: flex;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #07c160;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #07c160;
  border-radius: 2rpx;
}

/* Promotion List */
.promotion-list {
  padding-bottom: 20rpx;
}

.promotion-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
}

.promotion-status-badge {
  position: absolute;
  top: 0;
  right: 0;
  padding: 6rpx 20rpx;
  font-size: 22rpx;
  border-bottom-left-radius: 12rpx;
  color: #fff;
}

.status-active {
  background-color: #07c160;
}

.status-scheduled {
  background-color: #1aad19;
  opacity: 0.8;
}

.status-ended {
  background-color: #999;
}

.promotion-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.promotion-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.promotion-type {
  font-size: 24rpx;
  color: #ff9800;
  background-color: #fff3e0;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-left: 10rpx;
}

.promotion-content {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #666;
}

.info-label {
  width: 140rpx;
}

.info-value {
  flex: 1;
  color: #333;
}

.promotion-footer {
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 20rpx;
}

.action-btn {
  font-size: 26rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
}

.edit-btn {
  background-color: #fff;
  color: #333;
  border: 1rpx solid #ddd;
}

.delete-btn {
  background-color: #fff;
  color: #ff3b30;
  border: 1rpx solid #ff3b30;
}

.end-btn {
  background-color: #fff;
  color: #ff9800;
  border: 1rpx solid #ff9800;
}

/* Add Button */
.add-promotion-btn {
  position: fixed;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  height: 88rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.3);
  z-index: 99;
}

.add-promotion-btn:active {
  transform: scale(0.98);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  color: #ccc;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* Form Modal (Fullscreen) */
.form-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #f5f5f5;
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

.modal-header {
  height: 88rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.close-btn {
  font-size: 28rpx;
  color: #666;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.save-btn {
  font-size: 28rpx;
  color: #07c160;
  font-weight: bold;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
}

.form-group {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #333;
}

.required {
  color: #ff3b30;
  margin-left: 4rpx;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.picker-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.placeholder {
  color: #999;
}

.form-radio-group {
  flex: 1;
  display: flex;
}

.radio-label {
  margin-right: 30rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.radio-label radio {
  transform: scale(0.8);
  margin-right: 6rpx;
}
