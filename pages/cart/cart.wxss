/* pages/cart/cart.wxss */

/* 全局样式重置 */
page {
  background-color: #f5f5f5;
  font-size: 28rpx;
  color: #333;
}

/* 购物车容器 */
.cart-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  box-sizing: border-box;
}

/* 购物车头部 */
.cart-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 100;
}

/* 清空购物车元素 */
.empty-cart-btn {
  font-size: 24rpx;
  color: #ff4757;
}

.back-btn {
  font-size: 40rpx;
  color: #333;
  padding: 10rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.cart-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.manage-btn {
  font-size: 28rpx;
  color: #1890ff;
  padding: 10rpx;
}

/* 空购物车样式 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: calc(100vh - 100rpx);
  background-color: #f5f5f5;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shopping-btn {
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  background-color: #e64340;
  color: #fff;
  border: none;
  border-radius: 40rpx;
}

/* 滚动区域 */
.cart-scroll {
  flex: 1;
  overflow-y: auto;
  background-color: #f5f5f5;
}

/* 商品分组 */
.cart-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.section-header {
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  border-bottom: 1rpx solid #e5e5e5;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.promotion-header {
  background-color: #fff8e1;
}

.invalid-header {
  background-color: #f5f5f5;
}

/* 商品项样式 */
.cart-item {
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fff;
  position: relative;
  transition: all 0.3s ease;
  overflow: hidden;
}

/* 商品项包装器 */
.cart-item-wrapper {
  display: flex;
  align-items: center;
  width: 100%;
  background-color: white;
  transition: transform 0.3s ease;
}

/* 滑动删除按钮 */
.slide-delete-btn {
  position: absolute;
  right: -120rpx;
  top: 0;
  bottom: 0;
  width: 120rpx;
  background-color: #ff4757;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  transition: right 0.3s ease;
}

.cart-item:last-child {
  border-bottom: none;
}

/* 商品选择框 */
.item-checkbox {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.custom-checkbox {
  transform: scale(1.5);
  color: #e64340;
}

/* 商品图片 */
.item-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.item-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 商品信息 */
.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-sku {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

/* 失效商品文本 */
.invalid-text {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-bottom: 10rpx;
}

/* 价格和促销信息 */
.item-price-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.price-info {
  display: flex;
  align-items: baseline;
  flex-wrap: wrap;
}

.current-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #e64340;
  margin-right: 15rpx;
}

.current-price::before {
  content: '¥';
  font-size: 24rpx;
  margin-right: 4rpx;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-right: 15rpx;
}

.original-price::before {
  content: '¥';
  margin-right: 4rpx;
}

.invalid-price {
  color: #999;
  text-decoration: line-through;
}

/* 促销标签 */
.promotion-tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.tag {
  background-color: #fff1f0;
  color: #ff4d4f;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

/* 数量和小计 */
.quantity-and-subtotal {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 10rpx;
}

/* 数量控制 */
.quantity-control {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  overflow: hidden;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333;
  background-color: #fff;
  border: 1rpx solid #e5e5e5;
  box-sizing: border-box;
}

.quantity-btn.disabled {
  color: #ccc;
  background-color: #f5f5f5;
}

.quantity-input {
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  border: none;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  box-sizing: border-box;
}

/* 小计金额 */
.subtotal {
  font-size: 28rpx;
  font-weight: bold;
  color: #e64340;
}

.subtotal::before {
  content: '¥';
  font-size: 24rpx;
  margin-right: 4rpx;
}

/* 商品操作 */
.item-actions {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.delete-btn {
  font-size: 28rpx;
  color: #ff4d4f;
  padding: 10rpx 20rpx;
  background-color: #fff;
  border: 1rpx solid #ffccc7;
  border-radius: 30rpx;
}

/* 失效商品样式 */
.invalid-item {
  opacity: 0.6;
  background-color: #fafafa;
}

/* 底部操作栏 */
.cart-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.footer-left {
  display: flex;
  align-items: center;
}

.select-all-text {
  font-size: 28rpx;
  color: #333;
  margin: 0 20rpx 0 10rpx;
}

.selected-info {
  font-size: 24rpx;
  color: #999;
}

.footer-right {
  display: flex;
  align-items: center;
}

.total-price-section {
  display: flex;
  align-items: baseline;
  margin-right: 30rpx;
}

.total-label {
  font-size: 28rpx;
  color: #333;
}

.total-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #e64340;
  margin: 0 10rpx;
}

.total-amount::before {
  content: '¥';
  font-size: 24rpx;
  margin-right: 4rpx;
}

.total-hint {
  font-size: 20rpx;
  color: #999;
}

.checkout-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  background-color: #e64340;
  color: #fff;
  border: none;
  border-radius: 40rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 按钮通用样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: #e64340;
  color: #fff;
  border: none;
}

.btn-primary:active {
  background-color: #c43c39;
  transform: scale(0.98);
}

/* 编辑模式样式 */
.edit-mode .cart-item {
  border: 1rpx solid transparent;
}

.edit-mode .cart-item:active {
  background-color: #f5f5f5;
}

/* 响应式设计 */
@media (max-width: 375rpx) {
  .cart-header {
    padding: 15rpx 20rpx;
  }
  
  .cart-item {
    padding: 15rpx 20rpx;
  }
  
  .item-image {
    width: 140rpx;
    height: 140rpx;
  }
  
  .footer-right {
    flex-direction: column;
    align-items: flex-end;
    gap: 10rpx;
  }
  
  .checkout-btn {
    width: 160rpx;
    height: 70rpx;
    font-size: 28rpx;
  }
}

/* 动画效果 */
.cart-item {
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 滑动删除动画 */
.slide-out {
  animation: slideOut 0.3s ease forwards;
}

@keyframes slideOut {
  from {
    opacity: 1;
    transform: translateX(0);
  }
  to {
    opacity: 0;
    transform: translateX(100%);
  }
}
