/* pages/merchant/index/index.wxss */

/* 容器样式 */
.container {
  padding: env(safe-area-inset-top) 30rpx 30rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  min-height: 100vh;
  font-size: 28rpx;
  color: #333;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

/* 标准操作栏 */
.standard-action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.logout-btn {
  background-color: #ff3b30;
  color: #fff;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 59, 48, 0.3);
  transition: all 0.3s ease;
}

.logout-btn:active {
  background-color: #cc0000;
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(255, 59, 48, 0.3);
}

/* 商家信息卡片 */
.merchant-card {
  display: flex;
  flex-direction: column;
}

.merchant-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.merchant-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 25rpx;
  object-fit: cover;
  border: 4rpx solid #1aad19;
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.2);
}

.merchant-basic-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.merchant-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.merchant-phone, .merchant-address {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

/* 统计卡片 */
.stats-section {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220rpx, 1fr));
  gap: 25rpx;
  margin-bottom: 30rpx;
}

.stat-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.stat-icon {
  font-size: 64rpx;
  margin-right: 20rpx;
}

.stat-content {
  text-align: right;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #1aad19;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 功能菜单区域 */
.menu-section {
  margin-bottom: 30rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  padding: 0 10rpx;
}

.more-link {
  font-size: 26rpx;
  color: #007aff;
  cursor: pointer;
}

/* 功能菜单网格 */
.menu-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240rpx, 1fr));
  gap: 25rpx;
  padding: 0 10rpx;
}

/* 功能菜单项 */
.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  text-align: center;
  cursor: pointer;
  position: relative;
}

.menu-icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
}

.menu-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.menu-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: #ff3b30;
  color: #fff;
  font-size: 24rpx;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  min-width: 40rpx;
  text-align: center;
}

/* 最近订单 */
.orders-section {
  margin-bottom: 30rpx;
}

.order-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-item {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 25rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.order-item:active {
  background-color: #e0e0e0;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.order-id {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  font-size: 24rpx;
  font-weight: 500;
  padding: 5rpx 15rpx;
  border-radius: 16rpx;
}

.order-status:contains('待处理') {
  background-color: #fff2f0;
  color: #ff3b30;
}

.order-status:contains('已发货') {
  background-color: #eaffea;
  color: #1aad19;
}

.order-status:contains('已完成') {
  background-color: #e5f3ff;
  color: #007aff;
}

.order-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: #333;
}

.customer-name {
  font-weight: 500;
}

.product-name {
  color: #666;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}

.order-amount {
  font-weight: bold;
  color: #ff3b30;
}

.order-date {
  color: #999;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .container {
    padding: env(safe-area-inset-top) 20rpx 20rpx;
  }
  
  .stats-section {
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }
  
  .menu-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }
  
  .stat-card {
    padding: 25rpx;
  }
  
  .stat-icon {
    font-size: 56rpx;
    margin-right: 15rpx;
  }
  
  .stat-value {
    font-size: 40rpx;
  }
  
  .stat-label {
    font-size: 22rpx;
  }
  
  .menu-item {
    padding: 25rpx 15rpx;
  }
  
  .menu-icon {
    font-size: 56rpx;
    margin-bottom: 15rpx;
  }
  
  .menu-name {
    font-size: 28rpx;
  }
  
  .merchant-logo {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
  }
  
  .merchant-name {
    font-size: 32rpx;
  }
  
  .merchant-phone, .merchant-address {
    font-size: 26rpx;
  }
  
  .page-title {
    font-size: 32rpx;
  }
  
  .logout-btn {
    padding: 12rpx 24rpx;
    font-size: 26rpx;
  }
}

@media (min-width: 768px) {
  .container {
    max-width: 1200rpx;
    margin: 0 auto;
    padding: env(safe-area-inset-top) 30rpx 30rpx;
  }
  
  .stats-section {
    grid-template-columns: repeat(4, 1fr);
    gap: 30rpx;
  }
  
  .menu-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 30rpx;
  }
  
  .stat-card {
    padding: 40rpx;
  }
  
  .stat-icon {
    font-size: 72rpx;
    margin-right: 30rpx;
  }
  
  .stat-value {
    font-size: 56rpx;
  }
  
  .stat-label {
    font-size: 26rpx;
  }
}
