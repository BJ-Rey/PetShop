/* pages/merchant/pet/manage/manage-new.wxss */

/* 全局样式重置 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 头部操作栏 */
.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 按钮基础样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  border: none;
  outline: none;
  box-sizing: border-box;
}

/* 按钮大小 */
.btn-large {
  padding: 16rpx 40rpx;
  font-size: 32rpx;
}

/* 按钮颜色 */
.btn-primary {
  background-color: #1989fa;
  color: #fff;
}

.btn-primary:hover {
  background-color: #0c7ce4;
}

.btn-success {
  background-color: #07c160;
  color: #fff;
}

.btn-success:hover {
  background-color: #06ad56;
}

.btn-warning {
  background-color: #ff976a;
  color: #fff;
}

.btn-warning:hover {
  background-color: #ff7d43;
}

.btn-danger {
  background-color: #ee0a24;
  color: #fff;
}

.btn-danger:hover {
  background-color: #d90a1c;
}

.btn-default {
  background-color: #fff;
  color: #666;
  border: 1rpx solid #e4e7ed;
}

.btn-default:hover {
  background-color: #f5f7fa;
}

/* 按钮图标 */
.btn-icon {
  margin-right: 8rpx;
}

/* 筛选与搜索区域 */
.filter-search-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

/* 搜索框 */
.search-box {
  flex: 1;
  min-width: 300rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
}

.search-icon {
  font-size: 28rpx;
  color: #909399;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #303133;
  border: none;
  outline: none;
}

.search-input::placeholder {
  color: #c0c4cc;
}

.clear-btn {
  font-size: 32rpx;
  color: #909399;
  cursor: pointer;
  margin-left: 12rpx;
}

/* 状态筛选 */
.status-filter {
  min-width: 200rpx;
}

.filter-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 72rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  cursor: pointer;
}

.filter-picker text {
  font-size: 28rpx;
  color: #303133;
}

.picker-arrow {
  font-size: 24rpx;
  color: #909399;
  margin-left: 8rpx;
}

/* 排序栏 */
.sort-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 16rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.sort-label {
  font-size: 28rpx;
  color: #606266;
  margin-right: 16rpx;
}

.sort-options {
  display: flex;
  gap: 32rpx;
}

.sort-option {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #606266;
  cursor: pointer;
  transition: color 0.3s;
}

.sort-option.active {
  color: #1989fa;
}

.sort-arrow {
  font-size: 20rpx;
  margin-left: 8rpx;
}

.sort-arrow.asc::before {
  content: "↑";
}

.sort-arrow.desc::before {
  content: "↓";
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
}

.loading-text {
  font-size: 32rpx;
  color: #909399;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #303133;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #909399;
  margin-bottom: 32rpx;
  text-align: center;
}

/* 宠物列表 */
.pet-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 宠物卡片 */
.pet-card {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
}

/* 宠物基本信息 */
.pet-info {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #ebeef5;
}

/* 宠物头像 */
.pet-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  object-fit: cover;
  background-color: #f0f0f0;
}

/* 宠物详情 */
.pet-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 宠物头部信息 */
.pet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.pet-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #303133;
}

/* 宠物状态 */
.pet-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
}

.pet-status.published {
  background-color: #ecf5ff;
  color: #66b1ff;
}

.pet-status.unpublished {
  background-color: #fef0f0;
  color: #f56c6c;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: currentColor;
}

.status-text {
  font-size: 22rpx;
}

/* 宠物元数据 */
.pet-meta {
  font-size: 26rpx;
  color: #606266;
}

/* 宠物时间信息 */
.pet-time-info {
  display: flex;
  gap: 32rpx;
  font-size: 24rpx;
  color: #909399;
  margin-top: 8rpx;
}

.time-item {
  display: flex;
  align-items: center;
}

/* 宠物操作区域 */
.pet-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 排序编辑 */
.sort-edit-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.sort-label {
  font-size: 28rpx;
  color: #606266;
  min-width: 80rpx;
}

.sort-input-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.sort-input {
  width: 160rpx;
  height: 60rpx;
  border: 1rpx solid #dcdfe6;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  color: #303133;
  box-sizing: border-box;
  outline: none;
  transition: border-color 0.3s;
}

.sort-input:focus {
  border-color: #1989fa;
}

.sort-hint {
  font-size: 20rpx;
  color: #909399;
}

/* 操作按钮组 */
.action-buttons-group {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.action-buttons-group .btn {
  flex: 1;
  min-width: 120rpx;
}

/* 删除确认弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
  z-index: 1000;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #ebeef5;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
}

.modal-close {
  font-size: 40rpx;
  color: #909399;
  cursor: pointer;
  transition: color 0.3s;
}

.modal-close:hover {
  color: #606266;
}

.modal-content {
  padding: 32rpx;
}

.modal-message {
  font-size: 28rpx;
  color: #303133;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.modal-warning {
  font-size: 24rpx;
  color: #f56c6c;
  line-height: 1.5;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 32rpx 32rpx;
  justify-content: flex-end;
}

.modal-actions .btn {
  min-width: 120rpx;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .filter-search-bar {
    flex-direction: column;
  }
  
  .search-box,
  .status-filter {
    width: 100%;
  }
  
  .action-buttons-group {
    flex-direction: column;
  }
  
  .action-buttons-group .btn {
    width: 100%;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.pet-card {
  animation: fadeIn 0.3s ease-out;
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 6rpx;
  height: 6rpx;
}

::-webkit-scrollbar-track {
  background-color: #f5f5f5;
  border-radius: 3rpx;
}

::-webkit-scrollbar-thumb {
  background-color: #c0c4cc;
  border-radius: 3rpx;
}

::-webkit-scrollbar-thumb:hover {
  background-color: #909399;
}