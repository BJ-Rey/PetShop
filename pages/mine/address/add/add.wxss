/* pages/mine/address/add/add.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.standard-action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
  position: relative;
  z-index: 10;
}

.standard-back-btn {
  font-size: 36rpx;
  color: #333;
  padding: 10rpx;
}

.page-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
}

.save-btn {
  font-size: 28rpx;
  color: #007aff;
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  line-height: normal;
}

.address-form {
  background-color: #fff;
  margin-top: 20rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 150rpx;
  font-size: 28rpx;
  color: #666;
}

input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  padding: 0;
  margin: 0;
  line-height: normal;
}

.region-picker {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}

.checkbox-item {
  justify-content: flex-start;
}

.checkbox-wrapper {
  display: flex;
  align-items: center;
  margin-left: 150rpx;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 15rpx;
}

.checkbox.checked {
  background-color: #007aff;
  border-color: #007aff;
}

.checkbox-icon {
  font-size: 24rpx;
  color: #fff;
}

.checkbox-label {
  font-size: 28rpx;
  color: #333;
}