/* components/auth-modal/auth-modal.wxss */
.auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.auth-modal.show {
  visibility: visible;
  opacity: 1;
}

.auth-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.auth-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  padding-bottom: env(safe-area-inset-bottom);
}

.auth-modal.show .auth-content {
  transform: translateY(0);
}

.auth-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.auth-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.auth-body {
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.auth-tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.auth-tips text {
  font-size: 30rpx;
  color: #333;
}

.auth-sub-tips {
  font-size: 26rpx;
  color: #999 !important;
}

.auth-footer {
  display: flex;
  padding: 20rpx 30rpx 40rpx;
  gap: 20rpx;
}

.btn-cancel {
  flex: 1;
  background: #f5f5f5;
  color: #666;
  font-size: 30rpx;
  border-radius: 40rpx;
  border: none;
}

.btn-login {
  flex: 1;
  background: #1aad19;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  border: none;
}

.btn-cancel::after, .btn-login::after {
  border: none;
}