/* pages/search/result/result.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  position: relative; /* Added for suggestions positioning */
}

/* 搜索建议列表 */
.suggestions-list {
  position: absolute;
  top: 100rpx;
  left: 20rpx;
  right: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  max-height: 500rpx;
  overflow-y: auto;
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-item:active {
  background-color: #f5f7fa;
}

.suggestion-icon {
  font-size: 28rpx;
  color: #909399;
  margin-right: 16rpx;
}

.suggestion-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.search-input-wrapper {
  flex: 1;
  min-width: 300rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
}

.search-icon {
  font-size: 28rpx;
  color: #909399;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #303133;
  border: none;
  outline: none;
  background: transparent;
}

.search-input::placeholder {
  color: #c0c4cc;
}

.clear-btn {
  font-size: 32rpx;
  color: #909399;
  cursor: pointer;
  margin-left: 12rpx;
}

.search-btn {
  width: 120rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #1989fa;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 12rpx rgba(25, 137, 250, 0.3);
  transition: all 0.3s ease;
}

.search-btn:active {
  background-color: #0c7ce4;
  transform: scale(0.95);
  box-shadow: 0 1rpx 6rpx rgba(25, 137, 250, 0.3);
}

/* 结果统计 */
.result-stats {
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #606266;
}

/* 结果类型切换 */
.result-type-tabs {
  display: flex;
  gap: 32rpx;
  margin-bottom: 20rpx;
  padding: 16rpx 0;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow-x: auto;
  white-space: nowrap;
  -webkit-overflow-scrolling: touch;
}

.tab-item {
  padding: 12rpx 20rpx;
  font-size: 28rpx;
  color: #606266;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
}

.tab-item.active {
  color: #1989fa;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #1989fa;
  border-radius: 2rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  color: #909399;
}

.loading-text {
  font-size: 32rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  color: #909399;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-title {
  font-size: 32rpx;
  margin-bottom: 12rpx;
  font-weight: 500;
  color: #606266;
}

.empty-desc {
  font-size: 28rpx;
}

/* 结果列表 */
.result-list {
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  padding: 20rpx;
  margin-bottom: 20rpx;
}

/* 分类标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #ebeef5;
}

/* 空分类 */
.empty-section {
  text-align: center;
  padding: 50rpx 0;
  color: #909399;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

/* 宠物结果网格 */
.pet-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.pet-card {
  background-color: #f5f7fa;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.pet-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
}

.pet-avatar {
  width: 100%;
  height: 240rpx;
  object-fit: cover;
  background-color: #e4e7ed;
}

.pet-info {
  padding: 16rpx;
}

.pet-name {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.pet-meta {
  display: block;
  font-size: 24rpx;
  color: #606266;
  margin-bottom: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.pet-price {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #ff3b30;
}

/* 商品结果网格 */
.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.product-card {
  background-color: #f5f7fa;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.product-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
}

.product-image {
  width: 100%;
  height: 240rpx;
  object-fit: cover;
  background-color: #e4e7ed;
}

.product-info {
  padding: 16rpx;
}

.product-name {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #303133;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal;
  height: 72rpx;
  line-height: 36rpx;
}

.product-price {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #ff3b30;
  margin-bottom: 8rpx;
}

.product-sales {
  display: block;
  font-size: 24rpx;
  color: #909399;
}

/* 服务结果列表 */
.service-list {
  margin-bottom: 30rpx;
}

.service-item {
  display: flex;
  gap: 20rpx;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #ebeef5;
  transition: all 0.3s ease;
}

.service-item:last-child {
  border-bottom: none;
}

.service-item:active {
  background-color: #f5f7fa;
}

.service-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  object-fit: cover;
  background-color: #e4e7ed;
}

.service-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.service-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.service-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #303133;
  flex: 1;
  margin-right: 16rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.service-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff3b30;
}

.service-description {
  font-size: 26rpx;
  color: #606266;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 72rpx;
  line-height: 36rpx;
}

.service-merchant {
  font-size: 24rpx;
  color: #909399;
}

/* 商家结果列表 */
.merchant-list {
  margin-bottom: 30rpx;
}

.merchant-item {
  display: flex;
  gap: 20rpx;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #ebeef5;
  transition: all 0.3s ease;
}

.merchant-item:last-child {
  border-bottom: none;
}

.merchant-item:active {
  background-color: #f5f7fa;
}

.merchant-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  object-fit: cover;
  background-color: #e4e7ed;
}

.merchant-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.merchant-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.merchant-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #303133;
  flex: 1;
  margin-right: 16rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.merchant-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #ff9500;
}

.rating-star {
  font-size: 28rpx;
}

.merchant-address {
  font-size: 26rpx;
  color: #606266;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.merchant-service {
  font-size: 24rpx;
  color: #909399;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  cursor: pointer;
}

.load-more-text {
  font-size: 28rpx;
  color: #606266;
}

/* 正在加载更多 */
.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  color: #909399;
}

.loading-more-text {
  font-size: 28rpx;
}

/* 没有更多数据 */
.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  color: #909399;
}

.no-more-text {
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .container {
    padding: 10rpx;
  }
  
  .search-bar {
    gap: 10rpx;
  }
  
  .search-input-wrapper {
    min-width: 200rpx;
    height: 64rpx;
    padding: 0 16rpx;
  }
  
  .search-btn {
    width: 100rpx;
    height: 64rpx;
    font-size: 26rpx;
  }
  
  .result-type-tabs {
    gap: 20rpx;
    padding: 12rpx 0;
  }
  
  .tab-item {
    font-size: 26rpx;
    padding: 10rpx 16rpx;
  }
  
  .pet-grid,
  .product-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 15rpx;
  }
  
  .pet-avatar,
  .product-image {
    height: 200rpx;
  }
  
  .service-item {
    gap: 15rpx;
    padding: 12rpx 0;
  }
  
  .service-image {
    width: 120rpx;
    height: 120rpx;
  }
  
  .merchant-item {
    gap: 15rpx;
    padding: 12rpx 0;
  }
  
  .merchant-avatar {
    width: 100rpx;
    height: 100rpx;
  }
}

@media (min-width: 768px) {
  .container {
    max-width: 1200rpx;
    margin: 0 auto;
  }
  
  .pet-grid,
  .product-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .service-image {
    width: 200rpx;
    height: 200rpx;
  }
  
  .merchant-avatar {
    width: 150rpx;
    height: 150rpx;
  }
}
