/* pages/merchant/order/detail/detail.wxss */

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 32rpx;
  color: #999;
}

/* 订单详情 */
.order-detail {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 订单状态 */
.order-status-section {
  padding: 20rpx;
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.status-value {
  font-size: 36rpx;
  font-weight: bold;
}

.status-value.pending {
  color: #ff976a;
}

.status-value.processing {
  color: #1989fa;
}

.status-value.shipped {
  color: #13c2c2;
}

.status-value.completed {
  color: #52c41a;
}

.status-value.cancelled {
  color: #ff4d4f;
}

/* 订单基本信息 */
.order-info-section {
  padding: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 30rpx;
  color: #666;
}

.info-value {
  font-size: 30rpx;
  color: #333;
  text-align: right;
}

/* 客户信息 */
.customer-info-section {
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.customer-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.customer-label {
  font-size: 30rpx;
  color: #666;
  min-width: 120rpx;
  margin-right: 20rpx;
}

.customer-value {
  font-size: 30rpx;
  color: #333;
  flex: 1;
}

/* 商品信息 */
.products-section {
  padding: 20rpx;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  object-fit: cover;
  background-color: #f0f0f0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.product-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.product-spec {
  font-size: 28rpx;
  color: #666;
}

.product-quantity {
  font-size: 30rpx;
  color: #666;
  margin-right: 20rpx;
}

.product-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

/* 金额信息 */
.amount-section {
  padding: 20rpx;
}

.amount-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.amount-item:last-child {
  border-bottom: none;
  border-top: 2rpx solid #f0f0f0;
  margin-top: 10rpx;
  padding-top: 20rpx;
}

.amount-label {
  font-size: 30rpx;
  color: #666;
}

.amount-value {
  font-size: 30rpx;
  color: #333;
}

.amount-item.total .amount-label {
  font-size: 32rpx;
  font-weight: bold;
}

.amount-item.total .amount-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
}

/* 操作按钮 */
.action-section {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
  border: none;
  outline: none;
}

.action-btn.primary-btn {
  background-color: #1989fa;
  color: #fff;
}

.action-btn.primary-btn:hover {
  background-color: #0c7ce4;
}

.action-btn.danger-btn {
  background-color: #ff4d4f;
  color: #fff;
}

.action-btn.danger-btn:hover {
  background-color: #f5222d;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  gap: 20rpx;
}

.empty-icon {
  font-size: 120rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
}

.back-btn {
  margin-top: 20rpx;
  padding: 16rpx 40rpx;
  background-color: #1989fa;
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  transition: all 0.3s ease;
}

.back-btn:hover {
  background-color: #0c7ce4;
}