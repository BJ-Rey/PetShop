/* 操作按钮样式 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  font-size: 32rpx;
  color: #999;
}

.action-btn {
  padding: 10rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.action-btn.favorited {
  color: #e64340;
  transform: scale(1.1);
}

.action-btn:active {
  opacity: 0.7;
}

.action-btn.delete {
  color: #e64340;
}

