/* pages/merchant/customer/customer.wxss */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部操作栏 */
.standard-action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.logout-btn {
  font-size: 28rpx;
  color: #666;
  background-color: transparent;
  padding: 0;
  margin: 0;
  min-width: auto;
  height: auto;
  line-height: normal;
}

.logout-btn:hover {
  color: #ff3b30;
}

/* 搜索栏 */
.search-bar {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
}

.search-input::placeholder {
  color: #999;
}

/* 客户列表 */
.customer-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 客户项 */
.customer-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.customer-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
}

/* 客户基本信息 */
.customer-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.customer-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  object-fit: cover;
  margin-right: 20rpx;
  border: 2rpx solid #f0f0f0;
}

.customer-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.customer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.customer-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.customer-type {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.customer-type:empty {
  display: none;
}

.customer-type::before {
  content: '';
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  background-color: currentColor;
  border-radius: 50%;
  margin-right: 8rpx;
}

.customer-type:contains('VIP客户') {
  color: #ff9500;
  background-color: #fff7e6;
}

.customer-type:contains('普通客户') {
  color: #07c160;
  background-color: #f0f9f4;
}

.customer-phone {
  font-size: 28rpx;
  color: #333;
}

.customer-email {
  font-size: 26rpx;
  color: #666;
}

/* 客户统计信息 */
.customer-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  flex: 1;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 操作按钮 */
.customer-actions {
  display: flex;
  gap: 15rpx;
  justify-content: flex-end;
}

.action-btn {
  padding: 0 30rpx;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  border: 1px solid #e8e8e8;
  background-color: #fff;
  color: #333;
  min-width: auto;
}

.action-btn:hover {
  transform: translateY(-1rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.view-btn {
  border-color: #07c160;
  color: #07c160;
}

.view-btn:hover {
  background-color: #f0f9f4;
}

.edit-btn {
  border-color: #007aff;
  color: #007aff;
}

.edit-btn:hover {
  background-color: #e6f2ff;
}

.message-btn {
  border-color: #ff9500;
  color: #ff9500;
}

.message-btn:hover {
  background-color: #fff7e6;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .customer-actions {
    flex-wrap: wrap;
    justify-content: center;
  }
  
  .action-btn {
    flex: 1;
    min-width: 120rpx;
  }
  
  .customer-stats {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .stat-item {
    flex-direction: row;
    justify-content: space-around;
  }
}
