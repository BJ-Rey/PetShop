/* components/cat-card/cat-card.wxss */
.cat-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  margin-bottom: 20rpx;
  position: relative;
  transition: transform 0.2s;
}

.cat-card:active {
  transform: scale(0.98);
}

.image-wrapper {
  position: relative;
  width: 100%;
  height: 360rpx;
  background: #f5f5f5;
}

.cat-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx 16rpx 0 0;
}

.tag {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background: rgba(0,0,0,0.6);
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.info {
  padding: 20rpx;
}

.name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.price {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF9E6D; /* 橙色主题 */
}

.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 16rpx;
}

.tag-item {
  font-size: 22rpx;
  color: #666;
  background: #f8f8f8;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.bottom-row {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #999;
}

/* 骨架屏样式 */
.skeleton .skeleton-image {
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 37%, #f2f2f2 63%);
  background-size: 400% 100%;
  animation: skeleton-loading 1.4s ease infinite;
}

.skeleton .skeleton-rect {
  color: transparent !important;
  background: #f2f2f2;
  border-radius: 4rpx;
  margin-bottom: 8rpx;
}

.skeleton .tag-item {
  background: #f2f2f2;
  color: transparent;
}

@keyframes skeleton-loading {
  0% { background-position: 100% 50%; }
  100% { background-position: 0 50%; }
}
