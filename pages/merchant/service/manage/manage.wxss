/* pages/merchant/service/manage/manage.wxss */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部操作栏 */
.standard-action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.standard-back-btn {
  font-size: 32rpx;
  color: #666;
  cursor: pointer;
  padding: 10rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.logout-btn {
  font-size: 28rpx;
  color: #666;
  background-color: transparent;
  padding: 0;
  margin: 0;
  min-width: auto;
  height: auto;
  line-height: normal;
}

.logout-btn:hover {
  color: #ff3b30;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
}

.search-input::placeholder {
  color: #999;
}

.add-btn {
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 0 40rpx;
  background-color: #07c160;
  color: #fff;
  line-height: 80rpx;
  border: none;
}

.add-btn:hover {
  background-color: #06b254;
}

/* 筛选栏 */
.filter-bar {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.filter-row {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.filter-item {
  position: relative;
  margin-right: 20rpx;
}

.filter-header {
  display: flex;
  align-items: center;
  gap: 10rpx;
  cursor: pointer;
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.filter-header:active {
  background-color: #e0e0e0;
}

.filter-label {
  font-weight: 500;
  color: #666;
  font-size: 26rpx;
}

.filter-value {
  color: #333;
  font-size: 26rpx;
}

.filter-arrow {
  font-size: 20rpx;
  color: #999;
  transition: transform 0.3s ease;
}

.filter-arrow.up {
  transform: rotate(-180deg);
}

.filter-options {
  position: absolute;
  top: 100%;
  left: 0;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  padding: 10rpx 0;
  z-index: 1000;
  min-width: 200rpx;
}

.filter-option {
  padding: 15rpx 20rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 26rpx;
}

.filter-option:active {
  background-color: #f5f5f5;
}

.filter-option.active {
  color: #1aad19;
  background-color: #eaffea;
}

/* 排序栏 */
.sort-bar {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.sort-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 28rpx;
  color: #666;
  padding: 0 30rpx;
  height: 60rpx;
  border-radius: 30rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.sort-item:hover {
  background-color: #f5f5f5;
}

.sort-item.active {
  color: #07c160;
  background-color: #f0f9f4;
}

.sort-icon {
  font-size: 24rpx;
}

/* 服务列表 */
.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.empty-btn {
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 0 60rpx;
  background-color: #07c160;
  color: #fff;
  line-height: 80rpx;
  border: none;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 服务项 */
.product-item {
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  align-items: flex-start;
}

.product-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  object-fit: cover;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-category {
  font-size: 24rpx;
  color: #999;
  background-color: #f5f5f5;
  display: inline-block;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  align-self: flex-start;
}

.product-price {
  display: flex;
  gap: 15rpx;
  align-items: baseline;
}

.current-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff3b30;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

.product-meta {
  display: flex;
  gap: 30rpx;
  font-size: 24rpx;
  color: #666;
  margin-top: auto;
}

.product-status {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.status-tag {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.status-tag.published {
  background-color: #f0f9f4;
  color: #07c160;
}

.status-tag.unpublished {
  background-color: #fff1f0;
  color: #ff3b30;
}

.product-actions {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  justify-content: center;
}

.action-btn {
  width: 120rpx;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  padding: 0;
  border: 1px solid #e8e8e8;
  background-color: #fff;
  color: #333;
}

.action-btn:hover {
  transform: translateY(-1rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.edit-btn {
  border-color: #07c160;
  color: #07c160;
}

.edit-btn:hover {
  background-color: #f0f9f4;
}

.publish-btn {
  border-color: #07c160;
  color: #07c160;
}

.publish-btn:hover {
  background-color: #f0f9f4;
}

.unpublish-btn {
  border-color: #ff3b30;
  color: #ff3b30;
}

.unpublish-btn:hover {
  background-color: #fff1f0;
}

.delete-btn {
  border-color: #ff3b30;
  color: #ff3b30;
}

.delete-btn:hover {
  background-color: #fff1f0;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .product-item {
    flex-direction: column;
    align-items: center;
  }
  
  .product-image {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
  
  .product-actions {
    flex-direction: row;
    width: 100%;
    margin-top: 20rpx;
  }
  
  .action-btn {
    flex: 1;
  }
}

/* 批量操作栏 */
.batch-action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.batch-select {
  display: flex;
  align-items: center;
}

.batch-buttons {
  display: flex;
  gap: 15rpx;
}

.batch-btn {
  height: 70rpx;
  border-radius: 35rpx;
  font-size: 26rpx;
  padding: 0 35rpx;
  background-color: #07c160;
  color: #fff;
  line-height: 70rpx;
  border: none;
}

.batch-btn:hover {
  background-color: #06b254;
}

.batch-btn.delete {
  background-color: #ff3b30;
}

.batch-btn.delete:hover {
  background-color: #e83228;
}

/* 复选框样式 */
.checkbox-label {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.checkbox-label checkbox {
  transform: scale(1.5);
  margin-right: 10rpx;
}

/* 商品项布局调整 */
.product-item .checkbox-label {
  margin-top: 20rpx;
}

/* 批量操作样式增强 */
.selected-count {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}

/* 更多操作菜单 */
.more-actions {
  position: relative;
  display: inline-block;
}

.more-btn {
  position: relative;
  z-index: 10;
}

.more-actions-menu {
  position: absolute;
  right: 0;
  top: 100%;
  background-color: #fff;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  min-width: 200rpx;
  overflow: hidden;
}

.more-action-item {
  padding: 20rpx;
  font-size: 26rpx;
  color: #333;
  cursor: pointer;
  transition: all 0.3s ease;
}

.more-action-item:hover {
  background-color: #f5f5f5;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  z-index: 1001;
  width: 90%;
  max-width: 600rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
  line-height: 1;
}

.modal-close:hover {
  color: #333;
}

.modal-body {
  padding: 30rpx;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #e8e8e8;
}

.modal-btn {
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
  min-width: 120rpx;
}

.modal-btn.cancel {
  background-color: #f5f5f5;
  color: #333;
}

.modal-btn.confirm {
  background-color: #07c160;
  color: #fff;
}

/* 表单样式增强 */
.form-picker {
  display: flex;
  align-items: center;
  height: 80rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  background-color: #fff;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.radio-group {
  display: flex;
  gap: 30rpx;
  flex-wrap: wrap;
  padding: 10rpx 0;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.input-tip {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.form-input {
  height: 80rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

@media screen and (min-width: 768px) {
  .container {
    max-width: 1200rpx;
    margin: 0 auto;
  }
  
  .product-list {
    grid-template-columns: repeat(2, 1fr);
  }
}
