/* pages/merchant/order/order.wxss */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部操作栏 */
.standard-action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.logout-btn {
  font-size: 28rpx;
  color: #666;
  background-color: transparent;
  padding: 0;
  margin: 0;
  min-width: auto;
  height: auto;
  line-height: normal;
}

.logout-btn:hover {
  color: #ff3b30;
}

/* 搜索栏 */
.search-bar {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
}

.search-input::placeholder {
  color: #999;
}

/* 状态标签页 */
.status-tabs {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.tabs-scroll {
  display: flex;
  white-space: nowrap;
}

.tab-item {
  padding: 25rpx 40rpx;
  font-size: 28rpx;
  color: #666;
  cursor: pointer;
  transition: all 0.3s ease;
  border-bottom: 3rpx solid transparent;
}

.tab-item:hover {
  background-color: #f5f5f5;
}

.tab-item.active {
  color: #07c160;
  border-bottom-color: #07c160;
  font-weight: bold;
}

/* 订单列表 */
.order-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 订单项 */
.order-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.order-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-number {
  font-size: 28rpx;
  color: #666;
}

.order-status {
  font-size: 28rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.order-status.pending {
  color: #ff9500;
  background-color: #fff7e6;
}

.order-status.processing {
  color: #007aff;
  background-color: #e6f2ff;
}

.order-status.shipped {
  color: #5ac8fa;
  background-color: #e6f7ff;
}

.order-status.completed {
  color: #07c160;
  background-color: #f0f9f4;
}

.order-status.cancelled {
  color: #8e8e93;
  background-color: #f5f5f5;
}

/* 客户信息 */
.customer-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.customer-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.customer-phone, .customer-address {
  font-size: 26rpx;
  color: #666;
}

/* 订单商品列表 */
.order-products {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.product-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  object-fit: cover;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
}

.product-quantity {
  font-size: 26rpx;
  color: #666;
  margin-right: auto;
}

.product-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff3b30;
}

/* 订单金额 */
.order-amount {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 10rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.amount-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.amount-item.total {
  font-weight: bold;
}

.amount-item .label {
  font-size: 26rpx;
  color: #666;
}

.amount-item .value {
  font-size: 26rpx;
  color: #333;
}

.amount-item.total .value {
  font-size: 32rpx;
  color: #ff3b30;
}

/* 订单操作按钮 */
.order-actions {
  display: flex;
  gap: 15rpx;
  justify-content: flex-end;
}

.action-btn {
  padding: 0 30rpx;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  border: 1px solid #e8e8e8;
  background-color: #fff;
  color: #333;
  min-width: auto;
}

.action-btn:hover {
  transform: translateY(-1rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.view-btn {
  border-color: #07c160;
  color: #07c160;
}

.view-btn:hover {
  background-color: #f0f9f4;
}

.primary-btn {
  border-color: #07c160;
  color: #fff;
  background-color: #07c160;
}

.primary-btn:hover {
  background-color: #06b254;
  border-color: #06b254;
}

.delete-btn {
  border-color: #ff3b30;
  color: #ff3b30;
}

.delete-btn:hover {
  background-color: #fff1f0;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .order-actions {
    flex-wrap: wrap;
    justify-content: center;
  }
  
  .action-btn {
    flex: 1;
    min-width: 120rpx;
  }
}

/* 运单号信息样式 */
.tracking-info {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tracking-label {
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
}

.tracking-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #007aff;
  margin-right: 15rpx;
}

.copy-btn {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
  background-color: #007aff;
  color: #fff;
  border: none;
  height: auto;
  line-height: normal;
  min-width: auto;
}

.copy-btn:hover {
  background-color: #0056b3;
}

.tracking-input-container {
  display: flex;
  flex: 1;
  gap: 0;
  margin-left: 80rpx;
  width: calc(100% - 80rpx);
}

.tracking-input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 8rpx 0 0 8rpx;
  font-size: 26rpx;
  color: #333;
}

.tracking-input:focus {
  border-color: #07c160;
  outline: none;
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.1);
}

.save-btn {
  padding: 0 30rpx;
  height: 60rpx;
  border-radius: 0 8rpx 8rpx 0;
  font-size: 26rpx;
  line-height: 60rpx;
  background-color: #07c160;
  color: #fff;
  border: none;
  min-width: auto;
  white-space: nowrap;
}

.save-btn:hover {
  background-color: #06b254;
}
