/* 标准化筛选区域样式 */

/* 水平筛选栏容器 */
.filter-bar {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 15rpx 10rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow-x: auto;
  white-space: nowrap;
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE/Edge */
  gap: 15rpx;
}

.filter-bar::-webkit-scrollbar {
  display: none; /* Chrome/Safari */
}

/* 筛选项基础样式 */
.filter-item {
  padding: 16rpx 32rpx;
  border-radius: 28rpx;
  font-size: 32rpx;
  color: #666;
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
  overflow: hidden;
  background: #f5f5f5;
  border: 2rpx solid transparent;
  white-space: nowrap;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.filter-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 167, 38, 0.1);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.filter-item:active::before {
  transform: scaleX(1);
}

.filter-item.active {
  background: #FFA726;
  color: #fff;
  font-weight: bold;
  border-color: #F57C00;
  box-shadow: 0 4rpx 12rpx rgba(255, 167, 38, 0.3);
}

/* 筛选分隔符 */
.filter-item.divider {
  background: transparent;
  border: 2rpx solid #e8e8e8;
  color: #999;
  font-weight: 500;
  min-width: 80rpx;
  pointer-events: none;
}

/* 筛选箭头 */
.filter-item .arrow {
  font-size: 22rpx;
  margin-left: 8rpx;
  transition: transform 0.3s ease;
}

/* 标准筛选按钮 */
.filter-btn {
  padding: 16rpx 32rpx;
  height: auto;
  line-height: 1.5;
  background: #FFA726;
  color: #fff;
  border-radius: 28rpx;
  transition: all 0.3s ease;
  cursor: pointer;
  border: 2rpx solid transparent;
  white-space: nowrap;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(255, 167, 38, 0.3);
  margin-left: auto;
  flex-shrink: 0;
}

.filter-btn:active {
  background: #F57C00;
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(255, 167, 38, 0.3);
}

/* 筛选标签组样式 */
.filter-tabs {
  display: flex;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 10rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow-x: auto;
  scrollbar-width: none;
  -ms-overflow-style: none;
  gap: 15rpx;
}

.filter-tabs::-webkit-scrollbar {
  display: none;
}

.filter-tab {
  padding: 16rpx 32rpx;
  border-radius: 28rpx;
  font-size: 32rpx;
  color: #666;
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
  overflow: hidden;
  background: #f5f5f5;
  border: 2rpx solid transparent;
  white-space: nowrap;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.filter-tab::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(26, 173, 25, 0.1);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.filter-tab:active::before {
  transform: scaleX(1);
}

.filter-tab.active {
  background: #1aad19;
  color: #fff;
  font-weight: bold;
  border-color: #179715;
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.3);
}

/* 高级筛选弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 998;
}

.filter-modal {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
  padding: 30rpx;
  z-index: 999;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 0 10rpx;
  cursor: pointer;
  transition: color 0.3s ease;
}

.close-btn:active {
  color: #333;
}

.modal-content {
  margin-bottom: 30rpx;
}

.filter-section {
  margin-bottom: 40rpx;
}

.filter-section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding: 0;
  display: block;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
  padding-top: 30rpx;
  border-top: 2rpx solid #f0f0f0;
  margin-top: 20rpx;
}

.modal-footer .btn {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  border-radius: 40rpx;
  border: none;
  outline: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.modal-footer .btn-primary {
  background: #FFA726;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(255, 167, 38, 0.3);
}

.modal-footer .btn-primary:active {
  background: #F57C00;
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(255, 167, 38, 0.3);
}

.modal-footer .btn-default {
  background: #f5f5f5;
  color: #333;
  border: 2rpx solid #e8e8e8;
}

.modal-footer .btn-default:active {
  background: #e8e8e8;
  transform: scale(0.98);
}

/* 全局图片样式 */
.image {
  width: 100%;
  height: auto;
  object-fit: cover;
  border-radius: inherit;
  transition: all 0.3s ease;
}

.image-contain {
  object-fit: contain;
}

.image-cover {
  object-fit: cover;
}

.image-fill {
  object-fit: fill;
}

.image-center {
  object-position: center;
}

/* 头像样式 */
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  object-fit: cover;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.avatar-sm {
  width: 60rpx;
  height: 60rpx;
}

.avatar-lg {
  width: 140rpx;
  height: 140rpx;
}

.avatar-xl {
  width: 200rpx;
  height: 200rpx;
}

/* 悬浮购物车按钮样式 */
.floating-cart {
  position: fixed;
  bottom: 100rpx;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background: #FFA726;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(255, 167, 38, 0.4);
  cursor: pointer;
  transition: all 0.3s ease;
  z-index: 9999;
}

.floating-cart:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(255, 167, 38, 0.3);
}

.floating-cart-icon {
  font-size: 56rpx;
  color: #fff;
  margin-top: -4rpx;
}

.floating-cart-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 44rpx;
  height: 44rpx;
  background: #e64340;
  color: #fff;
  border-radius: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(230, 67, 64, 0.4);
  padding: 0 12rpx;
  animation: bounceIn 0.3s ease;
}

@keyframes bounceIn {
  0% { transform: scale(0); opacity: 0; }
  50% { transform: scale(1.2); }
  100% { transform: scale(1); opacity: 1; }
}
