/* pages/mine/favorites/favorites.wxss */
.container {
  padding-bottom: 30rpx;
}

/* Tab Bar */
.tab-bar {
  display: flex;
  background: #fff;
  padding: 20rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.tab-btn {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #666;
  padding-bottom: 10rpx;
  border-bottom: 4rpx solid transparent;
}

.tab-btn.active {
  color: #e64340;
  border-bottom-color: #e64340;
  font-weight: bold;
}

/* Sort Bar */
.sort-bar {
  display: flex;
  background: #f8f8f8;
  padding: 15rpx 30rpx;
  justify-content: flex-end;
  gap: 30rpx;
}

.sort-item {
  font-size: 26rpx;
  color: #888;
}

.sort-item.active {
  color: #e64340;
  font-weight: bold;
}

/* List */
.favorites-list {
  padding: 20rpx;
}

.favorite-item {
  display: flex;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-description {
  font-size: 24rpx;
  color: #999;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.item-meta {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.item-price {
  font-size: 32rpx;
  color: #e64340;
  font-weight: bold;
}

.item-merchant, .item-sales {
  font-size: 22rpx;
  color: #999;
}

.pet-meta {
  display: flex;
  gap: 10rpx;
}

.meta-item {
  font-size: 20rpx;
  background: #f0f0f0;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  color: #666;
}

/* Actions */
.item-actions {
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 15rpx;
  margin-left: 20rpx;
}

.action-btn, .remove-btn {
  margin: 0;
  padding: 0 20rpx;
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
}

.action-btn {
  background: #e64340;
  color: #fff;
}

.remove-btn {
  background: #f8f8f8;
  color: #666;
  border: 1rpx solid #ddd;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.loading-more, .no-more {
  text-align: center;
  padding: 20rpx;
  font-size: 24rpx;
  color: #999;
}
