/**app.wxss**/
/* 全局容器样式 */
.container {
  padding: env(safe-area-inset-top) 20rpx 20rpx 20rpx;
  box-sizing: border-box;
  width: 100%;
  max-width: 100vw;
  margin: 0 auto;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  background-color: #fafafa;
}

/* 统一响应式断点 */
/* 小屏设备 */
@media (max-width: 375px) {
  .container {
    padding: 15rpx;
    font-size: 26rpx;
  }
}

/* 大屏设备 */
@media (min-width: 750px) {
  .container {
    max-width: 750px;
    padding: 30rpx;
    font-size: 30rpx;
  }
}

/* 超大屏设备 */
@media (min-width: 1024px) {
  .container {
    max-width: 900px;
  }
}

/* 全局文本样式 */
.text-primary {
  color: #FFA726;
}

.text-secondary {
  color: #666;
}

.text-muted {
  color: #999;
}

.text-danger {
  color: #e64340;
}

.text-success {
  color: #07c160;
}

/* 触摸反馈样式 */
.hover-class {
  opacity: 0.8;
  transform: scale(0.98);
  transition: all 0.15s ease;
}

/* 加载动画 */
.loading {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(255, 167, 38, 0.3);
  border-radius: 50%;
  border-top-color: #FFA726;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 淡入动画 */
.fade-in {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 滑动进入动画 */
.slide-in {
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from { opacity: 0; transform: translateX(-20rpx); }
  to { opacity: 1; transform: translateX(0); }
}

/* 脉冲动画 */
.pulse {
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

/* 页面加载状态 */
.page-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: #fff;
}

.page-loading-text {
  margin-left: 20rpx;
  color: #666;
  font-size: 32rpx;
}

/* 字体大小层级 */
.font-xs {
  font-size: 22rpx;
}

.font-sm {
  font-size: 26rpx;
}

.font-base {
  font-size: 28rpx;
}

.font-lg {
  font-size: 32rpx;
}

.font-xl {
  font-size: 36rpx;
}

.font-xxl {
  font-size: 42rpx;
}

/* 字体粗细 */
.font-normal {
  font-weight: normal;
}

.font-medium {
  font-weight: 500;
}

.font-bold {
  font-weight: bold;
}

/* 行高优化 */
.line-height-sm {
  line-height: 1.3;
}

.line-height-base {
  line-height: 1.5;
}

.line-height-lg {
  line-height: 1.8;
}

/* 文本对齐 */
.text-left {
  text-align: left;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

/* 文本溢出处理 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-ellipsis-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.text-ellipsis-3 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

/* 通用卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  padding: 25rpx;
  margin-bottom: 25rpx;
  transition: all 0.3s ease;
}

.card:hover {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  transform: translateY(-1rpx);
}

/* 按钮样式 */
.btn {
  display: block;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin: 20rpx 0;
  transition: all 0.3s ease;
  border: none;
  outline: none;
}

.btn-primary {
  background: #FFA726;
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(255, 167, 38, 0.3);
}

.btn-primary:hover {
  background: #F57C00;
  box-shadow: 0 4rpx 12rpx rgba(255, 167, 38, 0.4);
}

.btn-default {
  background: #f5f5f5;
  color: #333;
  border: 2rpx solid #e8e8e8;
}

.btn-default:hover {
  background: #e8e8e8;
  border-color: #d0d0d0;
}

.btn-small {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  border-radius: 30rpx;
  padding: 0 20rpx;
}

.btn-large {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  border-radius: 45rpx;
}

/* 输入框样式 */
.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #d0d0d0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  background: #fff;
  color: #333;
  transition: all 0.3s ease;
  outline: none;
}

.input:focus {
  border-color: #FFA726;
  box-shadow: 0 0 0 4rpx rgba(255, 167, 38, 0.1);
}

.input::placeholder {
  color: #999;
  font-size: 30rpx;
}

.input-disabled {
  background: #f5f5f5;
  color: #999;
  border-color: #e8e8e8;
  cursor: not-allowed;
}

.input-small {
  height: 60rpx;
  font-size: 28rpx;
  padding: 0 15rpx;
}

.input-large {
  height: 90rpx;
  font-size: 34rpx;
  padding: 0 25rpx;
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  line-height: 1.3;
}

.title-lg {
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 25rpx;
  color: #333;
  line-height: 1.2;
}

.title-sm {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #333;
  line-height: 1.4;
}

.title-primary {
  color: #FFA726;
}

.title-secondary {
  color: #666;
  font-weight: 500;
}

/* 标准操作栏样式 */
.standard-action-bar {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 30rpx;
  padding: 10rpx 0;
  padding-top: calc(env(safe-area-inset-top) + 10rpx); /* 适配状态栏 */
  position: relative;
  /* 确保不被胶囊按钮遮挡 */
  padding-right: 200rpx; 
}

.standard-back-btn {
  font-size: 48rpx;
  color: #333;
  margin-right: 30rpx;
  padding: 10rpx;
  border-radius: 50%;
  transition: all 0.2s ease;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
}

.standard-back-btn:active {
  background: #f5f5f5;
  color: #FFA726;
  transform: scale(0.9);
}

.standard-action-bar .page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  margin: 0;
  padding: 0;
  /* 防止标题过长遮挡胶囊按钮 */
  max-width: 360rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 页面头部样式 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
  position: relative;
}

.page-header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin: 0;
  padding: 0;
}

.page-header .standard-back-btn {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  margin-right: 0;
  z-index: 1;
}

