/* 瀹瑰櫒鏍峰紡 */
.container {
  padding: env(safe-area-inset-top) 30rpx 30rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  min-height: 100vh;
  font-size: 28rpx;
  color: #333;
}

/* 鏍囧噯鎿嶄綔鏍?*/
.standard-action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.back-btn {
  background-color: transparent;
  color: #333;
  font-size: 28rpx;
  border: none;
  padding: 10rpx 20rpx;
  margin: 0;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  flex: 1;
  margin: 0 20rpx;
}

.save-btn {
  background-color: #1aad19;
  color: #fff;
  padding: 15rpx 30rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.3);
  transition: all 0.3s ease;
  height: 80rpx;
  line-height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn:active {
  background-color: #179715;
  transform: scale(0.95);
}

.save-btn:disabled {
  background-color: #e0e0e0;
  color: #999;
  box-shadow: none;
  transform: none;
}

/* 涓婁紶璇存槑 */
.upload-guide {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
}

.guide-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.guide-content {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  line-height: 1.5;
}

/* LOGO棰勮鍖哄煙 */
.logo-preview-area {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
  text-align: center;
}

.preview-container {
  position: relative;
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto 30rpx;
  overflow: hidden;
  border: 2rpx dashed #e0e0e0;
  border-radius: 16rpx;
  background-color: #fafafa;
}

.logo-preview {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

/* 涓婁紶瑕嗙洊灞?*/
.upload-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;
}

.upload-overlay:hover {
  background-color: rgba(255, 255, 255, 0.9);
}

.upload-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.upload-subtext {
  font-size: 24rpx;
  color: #999;
}

/* 鎿嶄綔鎸夐挳 */
.action-buttons {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-btn {
  background-color: transparent;
  color: #333;
  border: 2rpx solid #e0e0e0;
  padding: 15rpx 30rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
  height: 80rpx;
  line-height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn:active {
  background-color: #f5f5f5;
  transform: scale(0.95);
}

/* 瑁佸壀瀹瑰櫒 */
.crop-container {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: #fff;
}

.crop-canvas {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.crop-image {
  position: absolute;
  touch-action: none;
}

/* 瑁佸壀宸ュ叿鏉?*/
.crop-toolbar {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.95);
  box-sizing: border-box;
}

.crop-btn {
  background-color: transparent;
  color: #333;
  border: 2rpx solid #e0e0e0;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.crop-btn:active {
  background-color: #f5f5f5;
  transform: scale(0.95);
}

.crop-btn.confirm {
  background-color: #1aad19;
  color: #fff;
  border-color: #1aad19;
}

.crop-btn.confirm:active {
  background-color: #179715;
}

/* 瑁佸壀鎺у埗鍖哄煙 */
.crop-controls {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
}

.control-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.slider-container {
  margin-bottom: 20rpx;
}

.slider-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

/* 娴姩淇濆瓨鎸夐挳鏍峰紡 */
.floating-save-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 36rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border: none;
  border-radius: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
  z-index: 1000;
  transition: all 0.3s ease;
}

.floating-save-btn:hover {
  background-color: #05b056;
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.25);
}

.floating-save-btn:active {
  transform: translateY(0);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.2);
}

.save-icon {
  font-size: 36rpx;
}

/* 鍝嶅簲寮忚璁?*/
@media (max-width: 375px) {
  .container {
    padding: env(safe-area-inset-top) 20rpx 20rpx;
  }
  
  .standard-action-bar {
    margin-bottom: 20rpx;
  }
  
  .page-title {
    font-size: 32rpx;
  }
  
  .upload-guide {
    padding: 20rpx;
  }
  
  .logo-preview-area {
    padding: 20rpx;
  }
  
  .preview-container {
    width: 250rpx;
    height: 250rpx;
  }
  
  .action-buttons {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .crop-controls {
    padding: 20rpx;
  }
  
  .floating-save-btn {
    bottom: 30rpx;
    right: 30rpx;
    padding: 20rpx 30rpx;
    font-size: 28rpx;
  }
  
  .save-icon {
    font-size: 32rpx;
  }
}
