/* pages/service/appointment/appointment.wxss */

/* 服务信息卡片 */
.service-info-section {
    display: flex;
    padding: 20rpx;
    align-items: center;
}

.service-image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 12rpx;
    margin-right: 20rpx;
}

.service-details {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.service-name {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 8rpx;
}

.service-description {
    font-size: 24rpx;
    color: #999;
    margin-bottom: 12rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.service-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.service-price {
    font-size: 32rpx;
    color: #FFA726;
    font-weight: bold;
}

.service-duration, .service-merchant {
    font-size: 24rpx;
    color: #999;
    margin-left: 20rpx;
}

/* 时间选择器 */
.time-selector-modern {
    padding: 10rpx 0;
}

.selector-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}

.selector-title {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
}

.date-display {
    font-size: 32rpx;
    color: #FFA726;
    font-weight: bold;
}

.calendar-picker {
    background: #f9f9f9;
    border-radius: 12rpx;
    padding: 20rpx;
    border: 1px solid #eee;
}

.calendar-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
}

.calendar-icon {
    margin-right: 10rpx;
    font-size: 32rpx;
}

.appointment-hint {
    display: flex;
    align-items: flex-start;
    margin-top: 20rpx;
    padding: 15rpx;
    background: #fff8e1;
    border-radius: 8rpx;
}

.hint-icon {
    margin-right: 10rpx;
    font-size: 28rpx;
}

.hint-text {
    font-size: 24rpx;
    color: #f57c00;
    line-height: 1.4;
    flex: 1;
}

/* 宠物选择区域 */
.pet-scroll-container {
    width: 100%;
    white-space: nowrap;
    padding: 10rpx 0;
}

.pet-thumbnail-list {
    display: flex;
    align-items: flex-start;
}

.pet-thumbnail-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 25rpx;
    position: relative;
    width: 140rpx;
    flex-shrink: 0;
    opacity: 0.7;
    transition: all 0.2s;
}

.pet-thumbnail-item.active {
    opacity: 1;
    transform: scale(1.05);
}

.pet-thumbnail {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    border: 4rpx solid #eee;
    margin-bottom: 10rpx;
}

.pet-thumbnail-item.active .pet-thumbnail {
    border-color: #FFA726;
    box-shadow: 0 4rpx 12rpx rgba(255, 167, 38, 0.3);
}

.pet-thumbnail-name {
    font-size: 24rpx;
    color: #333;
    text-align: center;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.select-indicator {
    position: absolute;
    top: 0;
    right: 10rpx;
    background: #FFA726;
    color: #fff;
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    border: 2rpx solid #fff;
}

.add-pet .pet-thumbnail-name {
    color: #FFA726;
}

.add-pet-icon {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    border: 2rpx dashed #FFA726;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 48rpx;
    color: #FFA726;
    margin-bottom: 10rpx;
    background: #fff3e0;
}

.selected-pet-info {
    margin-top: 25rpx;
    padding-top: 20rpx;
    border-top: 1rpx solid #eee;
}

.info-label {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 15rpx;
    display: block;
}

.selected-pets-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 15rpx;
}

.pet-tag {
    background: #fff3e0;
    color: #f57c00;
    padding: 8rpx 20rpx;
    border-radius: 30rpx;
    font-size: 26rpx;
    border: 1px solid #ffe0b2;
}

/* 状态显示 */
.loading-state, .error-state, .no-pets {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 40rpx 0;
    color: #999;
    font-size: 28rpx;
}

.loading-spinner {
    width: 40rpx;
    height: 40rpx;
    border: 4rpx solid #f3f3f3;
    border-top: 4rpx solid #FFA726;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 20rpx;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.no-pets text {
    margin-bottom: 20rpx;
}

/* 表单样式 */
.form-item {
    margin-bottom: 20rpx;
}

.form-label {
    display: block;
    font-size: 28rpx;
    color: #333;
    margin-bottom: 10rpx;
}

.form-input {
    width: 100%;
    height: 80rpx;
    background: #f9f9f9;
    border-radius: 8rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
    border: 1px solid #eee;
}

.remark-textarea {
    width: 100%;
    height: 160rpx;
    background: #f9f9f9;
    border-radius: 8rpx;
    padding: 20rpx;
    font-size: 28rpx;
    border: 1px solid #eee;
    box-sizing: border-box;
}

.submit-section {
    margin-top: 40rpx;
    padding-bottom: 40rpx;
}
