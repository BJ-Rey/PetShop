/* pages/mall/detail/detail.wxss */

/* 容器样式 */
.container {
  padding-bottom: 140rpx; /* 增加底部内边距，防止内容被底部栏遮挡 */
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 操作按钮样式 */
.action-buttons {
  display: flex;
  gap: 30rpx; /* 增加间距 */
  font-size: 32rpx;
  color: #999;
  flex-shrink: 0;
  margin-left: 20rpx;
  align-self: flex-start; /* 顶部对齐 */
  padding-top: 5rpx;
}

.action-btn {
  padding: 10rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.action-btn.favorited {
  color: #e64340;
  transform: scale(1.1);
}

.action-btn:active {
  opacity: 0.7;
}

/* 商品图片样式 */
.product-image {
  width: 100%;
  height: 500rpx;
  object-fit: cover;
}

/* 商品基本信息样式 */
.product-info-section {
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 无图片时的紧凑布局 */
.product-info-section.no-image {
  padding: 15rpx;
  margin-bottom: 15rpx;
  box-shadow: none;
  background: transparent;
}

/* 信息行样式 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.product-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.5;
  flex: 1;
  margin-right: 20rpx;
}

.price-column {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  flex-shrink: 0;
}

.current-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #e64340;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

/* 商品元信息样式 */
.product-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  flex-wrap: wrap;
  gap: 20rpx;
  padding-top: 10rpx;
  border-top: 1rpx solid #f5f5f5;
}

.product-rating {
  color: #ff9800;
  font-weight: bold;
}

.star {
  margin-right: 4rpx;
}

.out-of-stock {
  color: #e64340;
}

/* 商品详情区域样式 */
.product-detail-section {
  margin-bottom: 20rpx;
  min-height: 200rpx; /* 增加最小高度，避免空内容时太丑 */
}

.product-detail-section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.product-description {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  margin-bottom: 20rpx;
  padding: 10rpx 0;
}

.detail-image {
  width: 100%;
  margin-bottom: 20rpx;
  display: block;
}

/* 规格选择区域样式 */
.product-specs-section {
  margin-bottom: 20rpx;
}

.product-specs-section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.specs-grid {
  margin-bottom: 20rpx;
}

.spec-item {
  margin-bottom: 20rpx;
}

.spec-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.spec-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.spec-option {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border: 2rpx solid #e8e8e8;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #666;
  cursor: pointer;
  transition: all 0.3s ease;
}

.spec-option.active {
  background: #eaffea;
  border-color: #1aad19;
  color: #1aad19;
}

/* 数量控制样式 */
.quantity-control {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.quantity-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
  font-weight: 500;
}

.quantity-input-group {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 24rpx;
  padding: 8rpx;
}

.quantity-decrease,
.quantity-increase {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  background: #fff;
  border-radius: 50%;
  cursor: pointer;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.quantity-decrease:active,
.quantity-increase:active {
  transform: scale(0.95);
}

.quantity {
  font-size: 28rpx;
  color: #333;
  padding: 0 20rpx;
}

.quantity-input {
  font-size: 28rpx;
  color: #333;
  padding: 0 20rpx;
}

/* 底部操作栏样式 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 1002; /* 提高层级 */
  border-top: 2rpx solid #f0f0f0;
  padding-bottom: env(safe-area-inset-bottom);
  height: 120rpx; /* 固定高度 */
  box-sizing: content-box;
}

.cart-icon, .action-btn {
  width: 100rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  cursor: pointer;
  margin-right: 10rpx;
}

.icon-wrapper {
  position: relative;
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
}

.bar-icon {
  width: 100%;
  height: 100%;
}

.icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
  line-height: 1;
}

.bar-text {
  font-size: 20rpx;
  color: #666;
  line-height: 1.2;
}

.cart-count {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 28rpx;
  height: 28rpx;
  background: #e64340;
  color: #fff;
  border-radius: 14rpx;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 6rpx;
  border: 2rpx solid #fff;
}

/* 按钮组 */
.btn-group {
  flex: 1;
  display: flex;
  align-items: center;
  height: 100%;
}

.add-to-cart-btn {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  background: linear-gradient(90deg, #ffcb00, #ff9500);
  color: #fff;
  border: none;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255, 149, 0, 0.3);
  padding: 0;
}

.buy-now-btn {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  background: linear-gradient(90deg, #1aad19, #07c160);
  color: #fff;
  border: none;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
  padding: 0;
}

/* 规格弹窗样式 */
.spec-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.spec-modal {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  z-index: 1001; /* 确保在最上层 */
  transform: translateY(100%);
  transition: transform 0.3s ease;
  padding-bottom: calc(env(safe-area-inset-bottom) + 20rpx);
  max-height: 85vh; /* 限制最大高度 */
  display: flex;
  flex-direction: column;
}

.spec-modal.show {
  transform: translateY(0);
}

.spec-header {
  padding: 30rpx;
  display: flex;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.spec-thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-top: -60rpx;
  background: #fff;
  border: 2rpx solid #eee;
}

.spec-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.spec-info .price {
  color: #ff4d4f;
  font-size: 36rpx;
  font-weight: bold;
}

.spec-info .selected-spec {
  color: #666;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.spec-content {
  max-height: 60vh;
  padding: 30rpx;
}

.spec-section {
  margin-bottom: 40rpx;
}

.spec-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.spec-item {
  padding: 10rpx 30rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #333;
  border: 2rpx solid transparent;
}

.spec-item.active {
  background: #e6f7ff;
  color: #1890ff;
  border-color: #1890ff;
}

.quantity-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
}

.quantity-control text {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  background: #f8f8f8;
}

.quantity-control input {
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  border-left: 1rpx solid #ddd;
  border-right: 1rpx solid #ddd;
  font-size: 28rpx;
}

.confirm-btn {
  width: 90%;
  margin: 20rpx auto;
  background: #ff4d4f;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
}

/* 无图片商品的紧凑布局样式 */
.no-image .price-section {
  margin-bottom: 8rpx;
}

.no-image .product-name {
  margin-bottom: 10rpx;
  font-size: 30rpx;
  -webkit-line-clamp: 1;
}

.no-image .product-meta {
  gap: 15rpx;
  font-size: 22rpx;
  margin-bottom: 10rpx;
}

/* 紧凑布局下的卡片样式 */
.card {
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 响应式设计 */
/* 小屏设备 */
@media (max-width: 375px) {
  .product-image {
    height: 400rpx;
  }
  
  .current-price {
    font-size: 36rpx;
  }
  
  .product-name {
    font-size: 30rpx;
  }
  
  .add-to-cart-btn,
  .buy-now-btn {
    height: 70rpx;
    line-height: 70rpx;
    font-size: 26rpx;
    margin: 0 8rpx;
  }
}

/* 大屏设备 */
@media (min-width: 750px) {
  .product-image {
    height: 600rpx;
  }
  
  .current-price {
    font-size: 44rpx;
  }
  
  .product-name {
    font-size: 34rpx;
  }
}

/* 超大屏设备 */
@media (min-width: 1024px) {
  .bottom-bar {
    max-width: 900px;
    left: 50%;
    transform: translateX(-50%);
  }
}

/* Top Navigation Optimization */
.custom-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  background: #fff;
  min-height: 88rpx; /* 调整为标准高度 */
  padding-top: env(safe-area-inset-top); /* 适配刘海屏 */
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.custom-nav .nav-left {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 80rpx;
  height: 100%;
  flex-shrink: 0;
}

.custom-nav .standard-back-btn {
  font-size: 40rpx;
  color: #333;
  padding: 10rpx;
}

.custom-nav .page-title {
  flex: 1;
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 0 20rpx;
  margin-right: 180rpx; /* 关键修复：右侧预留胶囊按钮空间 */
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.action-icon {
  font-size: 40rpx;
  line-height: 1;
  margin-bottom: 4rpx;
  color: #333;
}

.action-text {
  font-size: 20rpx;
  color: #666;
  line-height: 1;
}
