/* pages/pet/list/list.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.pet-list {
  padding: 20rpx;
}

.pet-item-wrapper {
  position: relative;
  margin-bottom: 20rpx;
  overflow: hidden;
  border-radius: 12rpx;
}

.pet-item {
  background: #fff;
  padding: 20rpx;
  display: flex;
  align-items: center;
  position: relative;
  z-index: 2;
  transition: transform 0.3s ease;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.pet-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #eee;
}

.pet-info {
  flex: 1;
}

.pet-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.pet-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 10rpx;
}

.pet-gender {
  font-size: 24rpx;
  color: #FFA726;
}

.pet-desc {
  font-size: 26rpx;
  color: #999;
}

.edit-btn {
  padding: 10rpx 20rpx;
  color: #999;
  font-size: 36rpx;
}

.delete-action {
  position: absolute;
  top: 0;
  right: 0;
  width: 120rpx;
  height: 100%;
  background: #ff4d4f;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  z-index: 1;
  border-radius: 0 12rpx 12rpx 0;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 100rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  background: #eee; /* Placeholder */
}

.add-pet-btn {
  margin-top: 40rpx;
  background: #FFA726;
  color: #fff;
  border-radius: 8px;
  padding: 10rpx 60rpx;
  font-size: 16px;
}

.standard-action-bar .add-btn {
    position: absolute;
    right: 30rpx;
    font-size: 28rpx;
    color: #333;
}
